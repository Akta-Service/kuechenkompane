<style>
  .ccs-container{
    .swiper-wrapper{
      gap: 15px;
    }
    .ccs-title{
      font-size: 18px;
      margin-bottom: 10px;
    }
    .swiper-slide {
      max-width: 161px;
      overflow: hidden;
      display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: 1fr 1fr;
    }
    .swiper-slide img{
      max-width: 162px;
      height: auto;
      width: 100%;
      aspect-ratio: 1;
      object-fit: cover;
      filter: brightness(0.95);
    }
    .ccs-prod-info{
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    button.m-add-to-cart {
      padding: 7px 0;
      font-size: 12px;
    }
    button.m-add-to-cart:hover{
      box-shadow: unset !important;
    }
    .ccs-info-top{
      display: flex;
      flex-direction: column;
      gap: 6px;
      margin-top: 5px;
    }
    .ccs-prod-title{
      font-size: 13px;
      line-height: 1.3;
      letter-spacing: 0px;
      text-transform: uppercase;
    }
    .ccs-prod-price{
      font-size: 13px;
      line-height: 1.3;
      letter-spacing: 0px;
      font-weight: 500;
    }
    .swiper-button-prev,
    .swiper-button-next{
      --swiper-navigation-size: 11px;
      width: 30px;
      height: 30px;
      background: {{settings.ccs_arrow_bg}};
      border-radius: 15px;
      top: 26%;
    }
    .swiper-button-next:after,
    .swiper-button-prev:after {
      color: black;
    }
  }
</style>
{% unless settings.cart_cross_sell_collection == blank %}
  <div class="ccs-container">
    <p class="ccs-title">Cross sell collection</p>
    <div class="swiper ccs-swiper">
      <div class="swiper-wrapper ccs-wrapper">
        {% for product in settings.cart_cross_sell_collection.products limit: 8 %}
          <div class="swiper-slide">
            <div>
              {% unless product.featured_image == blank %}
                {{ product.featured_image | image_url: width: 200 | image_tag }}
              {% endunless %}
            </div>
            <div class="ccs-prod-info">
              <div class="ccs-info-top">
                <p class="ccs-prod-title">{{ product.title }}</p>
                <p class="ccs-prod-price">{{ product.selected_or_first_available_variant.price | money }}</p>
              </div>
              <product-form class="m-product-form m-product-form--main" data-product-id="4546806317155">
                {% form 'product', product %}
                  <input type="hidden" name="form_type" value="product"><input type="hidden" name="utf8" value="âœ“"
                  ><input
                    type="hidden"
                    name="id"
                    value="{{ product.selected_or_first_available_variant.id }}"
                    data-selected-variant=""
                  >
                  <div class="m-product-form--wrapper m:display-flex m:flex-wrap m:items-end">
                    <button
                      type="submit"
                      name="add"
                      class="m-add-to-cart rs-add-btn mrk-btn m-spinner-button m-button m-button--primary "
                      data-atc-text="In den Warenkorb legen"
                    >
                      <span class="m-spinner-icon">
                        <svg
                          class="animate-spin m-svg-icon"
                          xmlns="http://www.w3.org/2000/svg"
                          viewBox="0 0 24 24"
                          fill="none"
                        >
                          <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                          <path fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                      </span>
                      <span class="m-add-to-cart--text"> In den Warenkorb legen </span>
                    </button>
                  </div>
                  <div class="m-product-form-message"></div>
                {% endform %}
              </product-form>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>
{% endunless %}
