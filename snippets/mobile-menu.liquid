  document.addEventListener("DOMContentLoaded", () => {
  const menuBtn = document.querySelector(".m-menu-button");
  const menuContainer = document.querySelector(".mobile--menu-container");
  const menuCloseBtns = document.querySelectorAll(".mobile--menu-close");
  const subItems = document.querySelectorAll(".mobile--menu-navigation-item");
  const subContent = document.querySelector(
    ".mobile--menu-navigation-item-content"
  );
  const backBtn = document.querySelector(".mobile--menu-back");

  // Open main menu
  menuBtn.addEventListener("click", () => {
    menuContainer.classList.add("menu--open");
  });

  // Close menu
  menuCloseBtns.forEach((btn) => {
    btn.addEventListener("click", () => {
      menuContainer.classList.remove("menu--open");
      subContent.classList.remove("active");
    });
  });

  // Open sub menu
  subItems.forEach((subItem) =>{
    subItem.addEventListener("click", () => {
      subContent.classList.add("active");
    });
  })
 

  // Go back to main menu
  backBtn.addEventListener("click", (e) => {
    e.stopPropagation();
    subContent.classList.remove("active");
  });

  document.querySelectorAll('.mobile--menu-navigation-sub-item > .mobile--menu-navigation-sub-item-wrapper').forEach(toggle => {
  toggle.addEventListener('click', function (e) {
    const parentItem = this.closest('.mobile--menu-navigation-sub-item');
    const submenu = parentItem.querySelector('.mobile--menu-sub-dropdown');

    if (!submenu) return; // no submenu to toggle

    if (submenu.classList.contains('open')) {
      // close submenu
      submenu.style.maxHeight = submenu.scrollHeight + 'px'; 
      submenu.offsetHeight; 
      submenu.style.maxHeight = '0px';

      submenu.classList.remove('open');
      parentItem.classList.remove('open');
    } else {
      // open submenu
      submenu.classList.add('open');
      submenu.style.maxHeight = submenu.scrollHeight + 'px';
      parentItem.classList.add('open');
    }
  });
});

  

