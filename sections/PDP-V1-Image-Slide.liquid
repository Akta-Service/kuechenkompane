{{ 'hf-style.css' | asset_url | stylesheet_tag }}

<div class="image-slide-section">
  <div class="image-slide-container">
    <h2 class="image-slide__title">{{ section.settings.title }}</h2>
    <div class="swiper image-slide__active">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="image-item">
              {% if block.settings.slide_img != blank %}
                <img src="{{ block.settings.slide_img | img_url: 'master' }}" alt="Image">
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script src="{{ 'pdp-v1-slide.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "PDP V1 - Image Slide",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Top Title",
      "default": "Customers love our shoes!"
    }
  ],
  "blocks": [
    {
      "type": "Slider",
      "name": "Slider",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_img",
          "label": "Slider Image"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "PDP V1 - Image Slide"
    }
  ]
}
{% endschema %}
