<style>
  .feature-highlight {
  padding: 4rem 1rem;
  background: linear-gradient(to right, #fdfdfd, #e6f7ff);
  text-align: center;
}

.feature-highlight .feature-title {
  font-size: 2rem;
  margin-bottom: 2rem;
}

.feature-content {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 2rem;
  flex-wrap: wrap;
}

.feature-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.product-center {
  flex: 0 0 auto;
}

.product-center img {
  max-width: 300px;
  height: auto;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  text-align: left;
}

.feature-item img {
  width: 40px;
  height: 40px;
}

</style>
