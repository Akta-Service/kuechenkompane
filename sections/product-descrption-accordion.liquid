{
  "name": "APEX Pr Des Accordion",
  "settings": [   
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "product description"
    },
    {
      "type": "select",
      "id": "heading_type",
      "label": "Choose Heading Size",
      "options": [
        {
          "value": "mrk-h1",
          "label": "H1"
        },
        {
          "value": "mrk-h2",
          "label": "H2"
        },
        {
          "value": "mrk-h3",
          "label": "H3"
        },
        {
          "value": "mrk-h4",
          "label": "H4"
        },
        {
          "value": "mrk-h5",
          "label": "H5"
        },
        {
          "value": "mrk-h6",
          "label": "H6"
        }
      ],
      "default": "mrk-h1"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Product description",
      "info": "If Want Default Description Keep Blank"
    },
    {
      "type": "range",
      "id": "mt",
      "label": "Margin Top",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "mb",
      "label": "Margin Bottom",
      "default": 40,
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "add_showore_btn",
      "label": "Add Show More Button ",
      "default": true
    },
    {
      "type": "text",
      "id": "readmore",
      "label": "Read More Button Text",
      "default": "Mehr lesen"
    },
    {
      "type": "text",
      "id": "readless",
      "label": "Read Less Button Text",
      "default": "Mehr lesen"
    },
    {
      "type": "color",
      "id": "br_color",
      "label": "Accordion Border Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "name": "FAQ",
      "type": "faq",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "How is Snow Extra-Strength Teeth Whitening Serum different?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>While most whitening serum only uses one whitening agent, this serum uses a potent combination of two powerful whitening agents â€“ Carbamide and Hydrogen peroxide.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "APEX Pr Des Accordion",
      "settings": {}
    }
  ]
}
{% endschema %}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    // FAQ Accordion
    let expandButtons2 = document.querySelectorAll('.accordion-button');
    expandButtons2.forEach((button) => {
      button.addEventListener('click', (event) => {
        const activeButton = document.querySelector('.accordion-button.active');
        if (activeButton && activeButton !== button) {
          activeButton.classList.toggle('active');
          activeButton.nextElementSibling.style.maxHeight = 0;
        }
        button.classList.toggle('active');
        const content = button.nextElementSibling;
        if (button.classList.contains('active')) {
          content.style.maxHeight = content.scrollHeight + 'px';
        } else {
          content.style.maxHeight = 0;
        }
      });
    });

    // show more
    document.querySelector('.show-more').addEventListener('click', function () {
      const content = document.querySelector('.p-dection-w');
      const button = this;

      if (content.classList.contains('hideContent')) {
        content.classList.remove('hideContent');
        button.textContent = '{{ section.settings.readless }}';
      } else {
        content.classList.add('hideContent');
        button.textContent = '{{ section.settings.readmore }}';
      }
    });
  });
</script>
