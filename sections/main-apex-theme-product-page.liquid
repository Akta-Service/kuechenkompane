                      alt=""
                      class="info-icon">
                  {% endif %}
                  <p class="product-info-text">{{ block.settings.info_text_3 }}</p>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
