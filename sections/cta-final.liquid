{%- style -%}
  .health-container {
    max-width: 1230px;
    padding: 0 15px;
    margin: auto;
  }
  .health-routine {
    {% if section.settings.border_t %}
      border-top: 1px solid #161818;
    {% endif %}
    {% if section.settings.border_b %}
      border-bottom: 1px solid #161818;
    {% endif %}
    padding: {{ section.settings.verticle_padding |  default: 70 }}px {{ section.settings.horizontal_padding |  default: 0 }}px;
   
  }
  .health-row {
    display: flex;
    justify-content: space-between;
    gap: 30px;
  }
  .health-img {
    /* border-radius: 10px; */
    width: 47%;
    flex: 0 0 auto;
  }

  .health-img img {
    border-radius: inherit;
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  .health-content {
    max-width: 535px;
  }
  .health-sub-title {
    display: inline-block;
    font-size: {{ section.settings.subtitle_size |  default: 18 }}px;   
    margin-bottom: 20px;
  }
  .health-title {   
    margin-bottom: 20px;
    font-size:{{ section.settings.title_size |  default: 32 }}px;
  }
  .helath-des {
    font-size: 20px;
    line-height: 26px;    
    margin-bottom: 50px;
  }
  .health-feature {
    list-style: none;
  }
  .item-icon {
    display: inline-block;
    width: 35px;
    height: 35px;
  }
  .item-icon svg {
    width: 100%;
    height: 100%;
  }
  .health-feature .feature-item {
    max-width: unset;
    text-align: unset;
    line-height: 1;
    display: flex;
    align-items: center;
    background: {{ section.settings.item_bg |  default: '#f0f0f3' }};
    margin-bottom: 13px;
    padding: 4px 12px;
    border-radius: 50px;
    letter-spacing: 0.8px;
    font-size: {{ section.settings.item_size |  default: 16 }}px;
    gap: 10px;
    line-height: 22px;
    width: fit-content;
    color: {{ section.settings.item_color |  default: '#0f0f0f' }};
  }
  .health-feature .feature-item:last-child {
    margin: 0;
  }
  .back-to-top-wrapper {
    /* text-align: center; */
    margin-top: 30px;
    margin-bottom: 20px;
  }
  .back-to-top {
    background: {{ section.settings.btn_bg |  default: '#fa8526' }};
    border: none;
    outline: none;

  }
  .wrapper--bottom {
    margin-top: auto;
    padding-top: 0;
  }
  @media only screen and (max-width: 768px) {
    .health-row {
      flex-direction: column;
    }
    .health-routine {
      padding: 30px 0;
    }
    .health-img {
      width: 100%;
      padding: 0 30px;
    }
    .health-content {
      max-width: 100%;
    }
    .helath-des {
      margin-bottom: 30px;
    }
    .health-container {
      padding: 0 22px;
    }
  }
  @media only screen and (max-width: 550px) {
    .health-title {
      font-size: 24px;
    }
  }
{%- endstyle -%}
<div class="health-routine m-color-{{ section.settings.color_scheme }}">
  <div class="health-container">
    <div class="health-row">
      <div class="health-img">
        <img src="{{ section.settings.img |  img_url: 'master'}}" loading="lazy" alt="image">
      </div>
      <div class="health-content">
        <span class="health-sub-title">{{ section.settings.subtitle }}</span>
        <h2 class="health-title {{ section.settings.heading_type }}">{{ section.settings.title }}</h2>
        <p class="helath-des">{{ section.settings.des }}</p>
        <ul class="health-feature">
          {% for block in section.blocks %}
            <li class="feature-item">
              {% if block.settings.svg_icon != blank %}
                <span class="item-icon">
                  {{ block.settings.svg_icon }}
                </span>
              {% endif %}
              {{ block.settings.feature_item }}
            </li>
          {% endfor %}
        </ul>
        <div class="back-to-top-wrapper">
          <button class="back-to-top mrk-btn m-button {{ section.settings.button_style }} {{ section.settings.button_size }}">{{ section.settings.backBtn }}</button>
        </div>
      </div>
    </div>
  </div>
</div>
