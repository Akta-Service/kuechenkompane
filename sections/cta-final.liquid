<script>
  document.addEventListener('DOMContentLoaded', () => {
    const backToTopBtn = document.querySelector('.back-to-top');
    // Scroll back to top when the button is clicked
    backToTopBtn.addEventListener('click', function () {
      window.scrollTo({
        top: 100,
        behavior: 'smooth',
      });
    });
  });
</script>