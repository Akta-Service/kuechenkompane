{{ 'apex-theme.css' | asset_url | stylesheet_tag }}
<style>
  /* usp-list-section */
  .usp-list-section {   
    padding: {{ section.settings.verticle_padding }}px {{ section.settings.horizontal_padding }}px;
  }
  @media (max-width: 768px) {
    .usp-list-section {
      padding: {{ section.settings.verticle_padding_mobile }}px {{ section.settings.horizontal_padding_mobile }}px;
    }

  }
</style>

<!-- usp-list-section start -->
<div class="usp-list-section m-color-{{ section.settings.color_scheme }}">
  <div class="usp-list-main">
    {% for block in section.blocks %}
      <div class="usp-list-item">
        <img src="{{ block.settings.usp_icon |  img_url: 'medium' }}"  loading="lazy" alt="icon">
        <h4 style="color: {{ block.settings.title_color }}; font-size: {{- block.settings.title_size -}}px;">
          {{ block.settings.usp_title }}
        </h4>
        <p style="color: {{ block.settings.info_color }}; font-size: {{- block.settings.info_size -}}px;">
          {{ block.settings.usp_info }}
        </p>
      </div>
      {% if block.settings.divider %}
        <hr class="usp-list-border">
      {% endif %}
    {% endfor %}
  </div>
</div>
<!-- usp-list-section end -->

{% schema %}
{
  "name": "APEX USPs",
  "settings": [   
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },
    {
      "type": "range",
      "id": "verticle_padding",
      "label": "Vertical Padding",
      "default": 50,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "horizontal_padding",
      "label": "Horizontal Padding",
      "default": 50,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "verticle_padding_mobile",
      "label": "Vertical Padding (Mobile)",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "horizontal_padding_mobile",
      "label": "Horizontal Padding (Mobile)",
      "default": 15,
      "min": 0,
      "max": 100,
      "step": 1
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "USP Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "usp_icon",
          "label": "USP Icon"
        },
        {
          "type": "text",
          "id": "usp_title",
          "label": "USP Title",
          "default": "Vegan"
        },        
        {
          "type": "range",
          "id": "title_size",
          "min": 12,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Title Font size",
          "default": 18
        },
        {
          "type": "textarea",
          "id": "usp_info",
          "label": "USP Info",
          "default": "and without animal testing"
        },        
        {
          "type": "range",
          "id": "info_size",
          "min": 12,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "info Font size",
          "default": 14
        },
        {
          "type": "checkbox",
          "id": "divider",
          "label": "Show Divider"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "APEX USPs",
      "blocks": [
        {
          "type": "item"
        },
        {
          "type": "item"
        },
        {
          "type": "item"
        },
        {
          "type": "item"
        }
      ]
    }
  ]
}
{% endschema %}
