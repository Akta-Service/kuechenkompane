<style>
  .custom-product-page a,
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  span,
  div,
  li,
  ul,
  ol,
  button,
  input,
  textarea,
  select {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .custom-product-page {
    background: #fff;
    margin-bottom: 50px;
  }

  .rs-container {
    max-width: 1290px;
    padding: 0 15px;
    margin: auto;
    padding-top: 50px;
  }

  .rs-row {
    display: flex;
    justify-content: space-between;
    gap: 50px;
  }

  .sticky {
    position: sticky;
    top: 50px;
  }

  /* product gallery css  */

  .product__slider-wrapper {
    width: 60%;
  }

  #product__slider {
    display: flex;
    gap: 50px;
    position: relative;
    height: 600px;
  }
  #product__slider img {
    height: 100%;
    width: 100%;
  }
  .swiper.thumb-slider {
    width: 112px;
    flex: 0 0 auto;
  }

  .swiper.thumb-slider .thumb-item {
    width: 112px;
    height: 112px !important;
    border: 1px solid transparent;
  }

  .swiper-slide.thumb-item.swiper-slide-active {
    padding: 2px;
    border: 1px solid #000;
    border-radius: 0;
  }
  .swiper.thumb-slider .thumb-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .swiper.main-slider {
    position: relative;
  }

  .main-slider {
    position: relative;
  }

  .main-slider:hover .button-prev,
  .main-slider:hover .button-next {
    opacity: 1;
    visibility: visible;
  }

  .button-prev,
  .button-next {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    color: #000;
    width: 50px;
    height: 50px;
    position: absolute;
    border-radius: 80px;
    border: 1px solid var(--Greyscale-20, #cacbcb);
    background: var(--Primary-White, #fff);
    box-shadow: 0 4px 16px #0000000f;
    transition: 0.3s all;
    z-index: 999;
    cursor: pointer;
    opacity: 0;
    visibility: hidden;
  }

  .button-prev:active,
  .button-next:active {
    background: linear-gradient(90deg, #cbe0f6, #cdaae9);
  }

  .button-prev {
    left: 10px;
    top: 50%;
    transform: translateY(-50%);
  }

  .button-next {
    top: 50%;
    right: 10px;
    transform: translateY(-50%);
  }
  /* product content css  */
  .product-info-content {
    width: 40%;
  }

  .rs-product-title {
    font-size: 22px;
    font-weight: 700;
    color: #1c1c1c;
    margin-bottom: 15px;
    font-family: 'grotesk', sans-serif !important;
  }

  .rs-product-subtitle {
    font-size: 16px;
    font-weight: 300;
    color: #1c1c1c;
    margin-bottom: 10px;
  }

  .liked-img {
    display: flex;
    margin-right: 15px;
    position: relative;
    z-index: 5;
  }

  @media only screen and (max-width: 600px) {
    .liked-img {
      margin-right: 8%;
    }
  }

  .liked-img img {
    width: 34px;
    height: 34px;
    border-radius: 50%;
    margin-right: -7px;
    border: 2px solid white;
  }

  .rs-liked {
    display: flex;
    align-items: center;
    margin-bottom: 12px;
  }

  .like-count {
    padding: 0px 9px 0px 14px;
    height: 30px;
    line-height: 30px;
    border-radius: 50px;
    display: inline-block;
    margin-left: -15px;
    font-size: 12px;
    font-weight: bold;
    flex-shrink: 0;
    background: #ddede0;
    position: relative;
    color: #1c1c1c;
  }

  .like-info {
    font-size: 12px;
    color: #1c1c1c;
    padding-left: 6px;
  }

  .rs-demand-badge {
    display: flex;
    margin-bottom: 20px;
    align-items: center;
  }

  .demand-badge {
    background: #fff1ee;
    color: #f0330e;
    padding: 3px 7px 5px 7px;
    border-radius: 6px;
    font-weight: bold;
    display: inline-block;
    font-size: 12px;
    margin-right: 9px;
    flex-shrink: 0;
  }

  .demand-text {
    display: inline-block;
    font-size: 12px;
    color: #1c1c1c;
    padding-right: 10px;
  }

  .current-price,
  .compare-price {
    font-size: 18px;
    color: #1c1c1ca6;
    display: inline-block;
    font-weight: 700;
    margin-bottom: 10px;
  }

  .compare-price {
    text-decoration: line-through;
  }

  .feature-header {
    font-size: 14px;
    color: #000;
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }

  .feature-header img {
    width: 24px;
    height: 24px;
    margin-right: 9px;
  }

  .product-feature-item {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 10px;
  }

  .product-feature-item img {
    width: 24px;
    height: 24px;
  }

  .rs-add-to-cart {
    background: #f7b52e;
    width: 100%;
    padding: 13px 0;
    text-align: center;
    text-transform: uppercase;
    font-weight: 700;
    font-size: 15px;
    color: #000;
    border: none;
    outline: none;
    margin-bottom: 20px;
    margin-top: 10px;
  }

  .rs-payment {
    margin-bottom: 30px;
  }

  .rs-payment img {
    width: 100%;
    height: 35px;
  }

  .rs-product-info {
    display: flex;
  }

  .info-card {
    border: 1px solid #bebebe;
    background: #ffffff;
    color: #000000;
    border-radius: 9px;
    padding: 9px 12px;
    width: 32.333%;
    margin: 0.5%;
    text-align: center;
    font-size: 12px;
    line-height: 14px;
  }

  .info-card img {
    width: 24px;
    height: 24px;
    margin-bottom: 5px;
    display: inline-block;
  }

  .info-card p {
    line-height: 1;
  }

  .swiper-pagination {
    display: none;
  }

  .swiper-pagination-bullet {
    background: #1c1c1c !important;
  }
  .prouduct-review {
    display: flex;
    align-items: center;
    margin-bottom: 8px;
    gap: 10px;
  }
  .prouduct-review svg {
    width: 110px;
  }

  @media only screen and (max-width: 1300px) {
    .rs-row {
      gap: 30px;
    }

    #product__slider {
      gap: 30px;
    }

    .swiper-slide.main-item img {
      height: 100%;
    }
  }

  @media only screen and (max-width: 1000px) {
    .swiper.thumb-slider {
      display: none;
    }

    .product__slider-wrapper {
      width: 50%;
    }

    .product-info-content {
      width: 50%;
    }
  }

  @media only screen and (max-width: 900px) {
    .rs-row {
      flex-direction: column;
      gap: 60px;
    }

    .product__slider-wrapper {
      width: 100%;
    }

    .swiper-slide.main-item img {
      width: 100%;
      object-fit: cover;
    }

    .swiper-pagination {
      display: block;
      position: absolute;
      bottom: -45px !important;
    }

    .product-info-content {
      width: 100%;
    }
    #product__slider {
      height: auto;
    }
    .swiper-pagination-bullet::after,
    .swiper-pagination-bullet::before {
      content: inherit !important;
    }
    span.swiper-pagination-bullet {
      opacity: 0.6 !important;
    }
    span.swiper-pagination-bullet.swiper-pagination-bullet-active {
      opacity: 1 !important;
    }
  }
</style>

