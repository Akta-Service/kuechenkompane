      "label": "Button Text",
      "default": "shop now"
    },
    {
      "type": "header",
      "content": "Button background color"
    },
    {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "btn_bg_color_hover",
      "label": "Button Background Color (Hover)",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Button text color"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "btn_text_color_hover",
      "label": "Button Text Color (Hover)",
      "default": "#ffffff"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Brand Image"
    },
    {
      "type": "image_picker",
      "id": "brang_img1",
