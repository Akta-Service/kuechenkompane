    },
    {
      "type": "image_picker",
      "id": "brang_img3",
      "label": "Brand Image 3"
    },
    {
      "type": "image_picker",
      "id": "brang_img4",
      "label": "Brand Image 4"
    },
    {
      "type": "image_picker",
      "id": "brang_img5",
      "label": "Brand Image 5"
    },
    {
      "type": "image_picker",
      "id": "brang_img6",
      "label": "Brand Image 6"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Top Item",
      "settings": [
        {
          "type": "text",
          "id": "top_item",
          "label": "Top Item Text",
          "default": "100% Money Back"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner Version 2"
    }
  ]
}
