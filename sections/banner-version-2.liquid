<script src="{{ 'swiper-bundle.min.js' | asset_url }}"></script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    var swiper = new Swiper('.banner-top-slider', {
      loop: true,
      slidesPerView: 5,
      spaceBetween: 0,
      breakpoints: {
        768: {
          slidesPerView: 5,
        },
        0: {
          slidesPerView: 1,
          centeredSlides: true,
          spaceBetween: 20,
        },
      },
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
    });
  });
</script>
