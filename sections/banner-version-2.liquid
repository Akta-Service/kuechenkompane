      "label": "Brand Image 2"
    },
    {
      "type": "image_picker",
      "id": "brang_img3",
      "label": "Brand Image 3"
    },
    {
      "type": "image_picker",
      "id": "brang_img4",
      "label": "Brand Image 4"
    },
    {
      "type": "image_picker",
      "id": "brang_img5",
      "label": "Brand Image 5"
    },
    {
      "type": "image_picker",
      "id": "brang_img6",
      "label": "Brand Image 6"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Top Item",
      "settings": [
        {
          "type": "text",
          "id": "top_item",
          "label": "Top Item Text",
          "default": "100% Money Back"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner Version 2"
    }
  ]
}
{% endschema %}
<script src="{{ 'swiper-bundle.min.js' | asset_url }}"></script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    cosnt swiper{{ section.id }} = new Swiper('.banner-top-slider', {
      loop: true,
      slidesPerView: 3,
      spaceBetween: 10,
      speed: 1000,
      autoplay: {
        delay: 5000,
        disableOnInteraction: false,
      },
      breakpoints: {
        0: {
          slidesPerView: 1,
        },
        768: {
          slidesPerView: 3,
        },
      },
    });
  });
</script>
