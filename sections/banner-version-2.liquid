{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}

<style>
    ul {
      list-style: none;
    }

    a {
      text-decoration: none;
    }



    /* common css end   */
  .banner-area-two {
    margin-top: {{ section.settings.mt }}px;
    margin-bottom: {{ section.settings.mb }}px;
    position: relative;
  }

    .banner-top-content {
      max-width: 1310px;
      margin: 0 auto;
      padding: 8px 0;
      text-align: center;
      justify-content: center;
    }

    .banner-top-content-item {
      padding: 0 18px;
      text-align: center;
    }

    .banner-top-content-item span i {
      font-size: 14px;
      color: #1e1e1e;
      margin-right: 10px;
    }

    .banner-top-content-item span {
      font-size: 13px;
      text-transform: uppercase;
      font-weight: 400;
      font-family: Pragmatica, sans-serif;
    }

    /* banner main  */
    .banner-img {
      position: relative;
    }


    .video-wrapper video {
      height: 100%;
      width: 100%;

  }


  .banner-main-content {
    position: absolute;
    bottom: 15%;
    text-align: center;
    left: 50%;
    right: 50%;
    max-width: 750px;
    width: 100%;
    transform: translate(-50%);
  }

    .banner-main {
     position:relative;
      height: 43vw;
      max-height: 700px;
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      overflow: hidden;
    }

    .banner-main-content h3 {

      line-height: 1;
      letter-spacing: -0.02em;
      font-size: {{ section.settings.title_font_size }}px;
      color: {{ section.settings.title_color }};
      margin-bottom: 30px;
    }

    .banner-main-content p {
      font-size: 16px;
      color:#fff;
    }

    .banner-btn a {

      display: inline-flex;
      justify-content: center;
      margin-top: 30px;
      align-items: center;
      border: 1px solid #fff;
      border-radius: 5px;
      font-size: 18px;
      line-height: 1;
      padding: 15px 30px;
      cursor: pointer;
      text-decoration: none;
      background-color: rgb(30 30 30);
      color: rgb(255, 255, 255);
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      min-width: 7.6rem;
      font-weight: 700;
    }
    .banner-btn-{{ section.id }} a{
      color: {{ section.settings.btn_text_color }};
      background: {{ section.settings.btn_bg_color  }};
    }
    .banner-btn-{{ section.id }} a:hover {
      color: {{ section.settings.btn_text_color_hover }};
      background: {{ section.settings.btn_bg_color_hover  }} ;
    }
    /* banner bottom  */
    .banner-bottom {
      padding: 20px 0;
    }

    .banner-bottm-content {
      max-width: 890px;
      padding: 0 50px;
      justify-content: space-between;
      margin: 0 auto;
      display: flex;
      align-items: center;
    }

    .banner-brand-img {
      /* flex-basis: 25%; */
      max-width: 230px;
    }
    .banner-top-content-item {
    max-width: 100%;
    }
    @media (min-width: 1024px) and (max-width: 1200px) {
      .banner-main-content {
        bottom: 43%;
        right: 4%;
      }
    }

    @media (min-width: 750px) and (max-width: 1023px) {
      .banner-main-content {
        right: 5%;
      }

      .banner-main-content h3 {
        font-size: 2rem;
        margin-bottom: 10px;
      }

      .banner-btn a {
        margin-top: 15px;
      }
    }

    @media only screen and (max-width: 749px) {
      .banner-main-content {
        text-align: center;
        right: 0;
        bottom: 0;
        top: 60%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        padding: 0 16px;

      }

      .banner-main-content h3 {
        font-size: 2rem;
      }

      .banner-main {
        height: 140vw;
        max-height: 650px;
        background-position: inherit;
      }



      .banner-main-content h3 {
        font-size: 1.5rem;
        margin-bottom: 10px;
        color: rgb(255, 255, 255);
      }

      .banner-main-content p {
        color: rgb(255, 255, 255);
      }

      .banner-btn a {
        margin-top: 15px;
        font-size: 16px;
        padding: 10px 20px;
        border:1px solid #fff;
      }

      .banner-bottm-content {
        padding: 0 5px;
        gap: 8px;
    }
    }
    @media only screen and (max-width: 768px) {
      .banner-area-two {
        margin-top: {{ section.settings.mt_mobile }}px;
        margin-bottom: {{ section.settings.mb_mobile }}px;
      }
      .banner-main-content h3 {
        font-size: 2rem;
    }
    }
    .banner-top-content-item span {
    display: flex;
    align-items: center;
    gap: 10px;
    justify-content: center;
   }
    .banner-top-content-item span svg {
    width: 9px;
    height: 8px;
    }
    .banner-brand-img img {
    max-height: 46px;
    height: 100%;
    }
    .mobile-video { display: none; }
    @media only screen and (min-width: 1300px) {   .banner-brand-img img { max-height: 73px; height: 100%; } }
    @media (max-width: 768px) {
    .desktop-video { display: none; }
    .mobile-video { display: block; }
  }
</style>
<div class="banner-area-two">
  <div class="banner-top">
    <div class="swiper banner-top-slider">
      <div class="banner-top-content swiper-wrapper">
        {% for block in section.blocks %}
          <div class="banner-top-content-item swiper-slide">
            <span>
              <svg
                class="icon icon-checkmark"
                width="9"
                height="8"
                viewBox="0 0 9 8"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path d="M7.85766 0.48999L7.29266 1.05999C5.76017 2.59562 4.5901 3.87807 3.1677 5.33007L1.6527 4.05007L1.0427 3.53506L0.0126953 4.75506L0.622695 5.27506L2.7027 7.03506L3.2627 7.51007L3.7827 6.99007C5.5059 5.26319 6.73278 3.88383 8.4227 2.19007L8.98769 1.62007L7.85766 0.48999Z" fill="currentColor"></path>
              </svg>
              {{ block.settings.top_item -}}
            </span>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  <div
    class="banner-main"
    style="{% if section.settings.bg_igm != blank %} background-image: url('{{ section.settings.bg_igm |  img_url: 'master'  }}'); {% endif %}"
  >
    <div class="video-wrapper">
      <video class="desktop-video" muted autoplay loop playsinline>
        <source src="{{ section.settings.u}}" type="video/mp4">
      </video>
      <video class="mobile-video" muted autoplay loop playsinline>
        <source src="{{ section.settings.u_mobile }}" type="video/mp4">
      </video>
    </div>

    <div class="banner-main-content">
      <h3>{{ section.settings.title }}</h3>
      {{ section.settings.sub_title }}
      <div class="banner-btn banner-btn-{{ section.id }}">
        <a href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
      </div>
    </div>
  </div>
  {% if section.settings.brang_img1 != blank
    or section.settings.brang_img2 != blank
    or section.settings.brang_img3 != blank
    or section.settings.brang_img4 != blank
    or section.settings.brang_img5 != blank
    or section.settings.brang_img6 != blank
  %}
    <div class="banner-bottom">
      <div class="banner-bottm-content">
        {% for i in (1..6) %}
          {% case i %}
            {% when 1 %}
              {% assign brand_img = section.settings.brang_img1 %}
            {% when 2 %}
              {% assign brand_img = section.settings.brang_img2 %}
            {% when 3 %}
              {% assign brand_img = section.settings.brang_img3 %}
            {% when 4 %}
              {% assign brand_img = section.settings.brang_img4 %}
            {% when 5 %}
              {% assign brand_img = section.settings.brang_img5 %}
            {% when 6 %}
              {% assign brand_img = section.settings.brang_img6 %}
          {% endcase %}

          {% if brand_img != blank %}
            <div class="banner-brand-img">
              <img src="{{ brand_img | img_url: 'master' }}" loading="lazy" alt="Brand Image {{ i }}">
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
</div>
{% schema %}
{
  "name": "Banner Version 2",
  "settings": [

    {
      "type": "text",
      "id": "u",
      "label": "Video URL",
