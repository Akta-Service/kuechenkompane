<style>
  @import url('https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Racing+Sans+One&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap');

.work-process-section {}

.work-process-head {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 25px 0 30px 0;
}

.work-process-head__shape img {
    width: 100%;
}

.work-process-head .title {
    font-family: "Roboto", sans-serif;
    font-size: 46px;
    line-height: 120%;
    font-weight: 600;
    padding: 0;
    margin: 0;
}

.work-process-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 15px;
    position: relative;
}

.work-process-bg img {
    width: 100%;
    margin-top: 60px;
}

.work-process-bg .img-2 {
    display: none;
}

.work-process-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-around;

}

.work-process-content {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 12%;
    right: 12%;
}

.work-process-item {
    text-align: center;
}

.work-process-item__title {
    margin: 0;
    padding: 0;
    font-size: 21px;
    font-family: "Roboto", sans-serif;
    font-weight: 600;
}

.work-process-item__text {
    margin: 0;
    padding: 0;
    font-family: "Roboto", sans-serif;
    font-weight: 400;
    font-size: 15px;
    max-width: 130px;
}

@media (max-width: 1200px) {
    .work-process-content {
        top: 58%;
    }
}

@media (max-width: 992px) {
    .work-process-item__title {
        font-size: 16px;
    }

    .work-process-item__text {
        font-size: 12px;
        padding-top: 6px;
    }
}

@media (max-width: 767px) {
    .work-process-bg .img-1 {
        display: none;
    }

    .work-process-bg .img-2 {
        display: block;
        max-width: 360px;
        margin: 0 auto;
    }

    .work-process-wrapper {
        flex-direction: column;
        justify-content: space-between;
        height: 700px;
        position: absolute;
        top: -450px;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
    }

    .work-process-head .title {
        font-size: 32px;
        white-space: nowrap;
    }

}

@media (max-width: 380px) {
    .work-process-wrapper {
        height: 575px;
        top: -357px;
    }
}
</style>

<!-- Work Process Section -->
  <section class="work-process-section">
    <div class="work-process-head">
        <div class="work-process-head__shape">
            {% if section.settings.shape_1 != blank %}
              <img src="{{ section.settings.shape_1 |  img_url: 'master' }}" loading="lazy" alt="Shape">
            {% endif %}
        </div>
        <h2 class="title">{{ section.settings.title }}</h2>
        <div class="work-process-head__shape">
          {% if section.settings.shape_2 != blank %}
            <img src="{{ section.settings.shape_2 |  img_url: 'master'}}" loading="lazy" alt="Shape">
          {% endif %}
        </div>
    </div>
    <div class="work-process-container">
        <div class="work-process-bg">
          {% if section.settings.bg_image != blank %}
            <img class="img-1" src="{{ section.settings.bg_image |  img_url: 'master' }}" alt="thumb">
          {% endif %}
          {% if section.settings.bg_image_mobile != blank %}
            <img class="img-2" src="{{ section.settings.bg_image_mobile |  img_url: 'master' }}" alt="thumb">
          {% endif %}
            
        </div>
        <div class="work-process-content">
            <div class="work-process-wrapper">
                <div class="work-process-item item1">
                    <h3 class="work-process-item__title">{{ section.settings.register }}</h3>
                    <p class="work-process-item__text">{{ section.settings.register_info }}</p>
                </div>
                <div class="work-process-item item2">
                    <h3 class="work-process-item__title">{{ section.settings.earn }}</h3>
                    <p class="work-process-item__text">{{ section.settings.earn_info }}</p>
                </div>
                <div class="work-process-item item3">
                    <h3 class="work-process-item__title">{{ section.settings.redeem}}</h3>
                    <p class="work-process-item__text">{{ section.settings.redeem_info }}</p>
                </div>
            </div>
        </div>

    </div>
</section>


{% schema %}
{
  "name": "Work Process",
  "settings": [
    {
      "type": "image_picker",
      "id": "shape_1",
      "label": "Shape Image 1"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Our Work Process"
    },
    {
      "type": "image_picker",
      "id": "shape_2",
      "label": "Shape Image 2"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "bg_image_mobile",
      "label": "Background Image (Mobile)"
    },
    {
      "type": "text",
      "id": "register",
      "label": "Step 1 Title",
      "default": "Register"
    },
    {
      "type": "textarea",
      "id": "register_info",
      "label": "Step 1 Description",
      "default": "Sign up to get started."
    },
    {
      "type": "text",
      "id": "earn",
      "label": "Step 2 Title",
      "default": "Earn"
    },
    {
      "type": "textarea",
      "id": "earn_info",
      "label": "Step 2 Description",
      "default": "Earn rewards as you participate."
    },
    {
      "type": "text",
      "id": "redeem",
      "label": "Step 3 Title",
      "default": "Redeem"
    },
    {
      "type": "textarea",
      "id": "redeem_info",
      "label": "Step 3 Description",
      "default": "Redeem your rewards easily."
    }
  ],
  "presets": [
    {
      "name": "Work Process"
    }
  ]
}
{% endschema %}