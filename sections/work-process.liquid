<style>


.work-process-head {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 25px 0 30px 0;
}

.work-process-head__shape img {
    width: 100%;
}

.work-process-head .title {
    font-family: "Roboto", sans-serif;
    font-size: 46px;
    line-height: 120%;
    font-weight: 600;
    padding: 0;
    margin: 0;
}

.work-process-container {
    max-width: 1350px;
    margin: 0 auto;
    padding: 0 15px;
    position: relative;
}

.work-process-bg img {
    width: 100%;
    margin-top: 60px;
}

.work-process-bg .img-2 {
    display: none;
}

.work-process-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 100%;
    height: 100%;

}

.work-process-content {
    /* position: absolute; */
    top: 50%;
    /* transform: translateY(-50%); */
    left: 12%;
    right: 12%;
}

.work-process-item {
    text-align: center;
}

.work-process-item__title {
    margin: 0;
    padding: 0;
    font-size: 21px;
    font-family: "Roboto", sans-serif;
    font-weight: 600;
}

.work-process-item__text {
    margin: 0;
    padding: 0;
    font-family: "Roboto", sans-serif;
    font-weight: 400;
    font-size: 15px;
    max-width: 130px;
}

@media (max-width: 1200px) {
    .work-process-content {
        top: 58%;
    }
}

@media (max-width: 992px) {
    .work-process-item__title {
        font-size: 16px;
    }

    .work-process-item__text {
        font-size: 12px;
        padding-top: 6px;
    }
}




.work-process-bg { 
   background-image: url({{ section.settings.bg_image | image_url }});
  background-size: contain;       
  background-repeat: no-repeat;
  background-position: center;  
  width: 100%;
  aspect-ratio: 1 / 1;             
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  text-align: center;
  max-height: 400px;
}
.work-process-content {    
  width: 100%;
  height: 100%;
}
.work-process-wrapper{

}
@media (max-width: 768px) {
.work-process-bg { 
    background-image: url({{ section.settings.bg_image_mobile | image_url }});
    width: 100%;
    max-height: none;
    height: auto;
    aspect-ratio: 3 / 4;
  }
  .work-process-wrapper {
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    height: 100%;
  }
  .work-process-item {
    text-align: center;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .work-process-item.item3 h3.work-process-item__title{
    margin-top: 50px;
  }
  .work-process-head .title {
    font-size: 34px;
  }
}

@media (max-width: 600px) {
.work-process-bg {    
    aspect-ratio: 3 / 6;
  }

}

</style>

<!-- Work Process Section -->
  <section class="work-process-section">
    <div class="work-process-head">
        <div class="work-process-head__shape">
            {% if section.settings.shape_1 != blank %}
              <img src="{{ section.settings.shape_1 |  img_url: 'master' }}" loading="lazy" alt="Shape">
            {% endif %}
        </div>
        <h2 class="title">{{ section.settings.title }}</h2>
        <div class="work-process-head__shape">
          {% if section.settings.shape_2 != blank %}
            <img src="{{ section.settings.shape_2 |  img_url: 'master'}}" loading="lazy" alt="Shape">
          {% endif %}
        </div>
    </div>
    <div class="work-process-container">
        <div class="work-process-bg">
          {% comment %} {% if section.settings.bg_image != blank %}
            <img class="img-1" src="{{ section.settings.bg_image |  img_url: 'master' }}" alt="thumb">
          {% endif %}
          {% if section.settings.bg_image_mobile != blank %}
            <img class="img-2" src="{{ section.settings.bg_image_mobile |  img_url: 'master' }}" alt="thumb">
          {% endif %} {% endcomment %}
             
          <div class="work-process-wrapper">
              <div class="work-process-item item1">
                  <h3 class="work-process-item__title">{{ section.settings.register }}</h3>
                  <p class="work-process-item__text">{{ section.settings.register_info }}</p>
              </div>
              <div class="work-process-item item2">
                  <h3 class="work-process-item__title">{{ section.settings.earn }}</h3>
                  <p class="work-process-item__text">{{ section.settings.earn_info }}</p>
              </div>
              <div class="work-process-item item3">
                  <h3 class="work-process-item__title">{{ section.settings.redeem}}</h3>
                  <p class="work-process-item__text">{{ section.settings.redeem_info }}</p>
              </div>
          </div>
       
        </div>
       

    </div>
</section>


{% schema %}
{
  "name": "Work Process",
  "settings": [
    {
      "type": "image_picker",
      "id": "shape_1",
      "label": "Shape Image 1"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Our Work Process"
    },
    {
      "type": "image_picker",
      "id": "shape_2",
      "label": "Shape Image 2"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "bg_image_mobile",
      "label": "Background Image (Mobile)"
    },
    {
      "type": "text",
      "id": "register",
      "label": "Step 1 Title",
      "default": "Register"
    },
    {
      "type": "textarea",
      "id": "register_info",
      "label": "Step 1 Description",
      "default": "Sign up to get started."
    },
    {
      "type": "text",
      "id": "earn",
      "label": "Step 2 Title",
      "default": "Earn"
    },
    {
      "type": "textarea",
      "id": "earn_info",
      "label": "Step 2 Description",
      "default": "Earn rewards as you participate."
    },
    {
      "type": "text",
      "id": "redeem",
      "label": "Step 3 Title",
      "default": "Redeem"
    },
    {
      "type": "textarea",
      "id": "redeem_info",
      "label": "Step 3 Description",
      "default": "Redeem your rewards easily."
    }
  ],
  "presets": [
    {
      "name": "Work Process"
    }
  ]
}
{% endschema %}