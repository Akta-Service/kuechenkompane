{% comment %}
  APEX VIP Sale Banner Section (with <picture>)
{% endcomment %}
<section class="apex-vip-sale-banner">
  <div class="apex-vip-sale-banner__inner">
    {% if section.settings.desktop_image != blank or section.settings.mobile_image != blank %}
      <picture>
        {% if section.settings.mobile_image != blank %}
          <source
            media="(max-width: 767px)"
            srcset="{{ section.settings.mobile_image | image_url }}"
          >
        {% endif %}
        {% if section.settings.desktop_image != blank %}
          <img
            src="{{ section.settings.desktop_image | image_url }}"
            alt="VIP Sale Banner"
            class="apex-vip-sale-banner__image"
            width=""
            height=""
          >
        {% endif %}
      </picture>
    {% endif %}
  </div>
</section>

<style>
  .apex-vip-sale-banner {
    width: 100%;
    display: block;
  }
  .apex-vip-sale-banner__image {
    display: block;
    width: 100%;
    height: auto;
  }
</style>

{% schema %}
{
  "name": "APEX VIP Sale Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop banner image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile banner image"
    }
  ],
  "presets": [
    {
      "name": "APEX VIP Sale Banner"
    }
  ]
}
{% endschema %}
