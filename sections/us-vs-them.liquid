        {
          "type": "richtext",
          "id": "description",
          "label": "Quotation Text",
          "default": "<p>Our comparison graphic shows why Kraftstein knives are the best choice. With extremely sharp blades, high-quality steel and ergonomic handles, they offer the highest quality and comfort.</p>"
        }    
        
      ]
    }
  ],
  "presets": [
    {
      "name": "APEX US vs Them",
      "blocks": [
        {
          "type": "title"
        },
        {
          "type": "description"
        }
      ]
    }
  ]
}
{% endschema %}
