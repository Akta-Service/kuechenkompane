        { "value": "p-xl", "label": "Extra Large" },
        { "value": "p-large", "label": "Large" },
        { "value": "p-medium", "label": "Medium" },
        { "value": "p-small", "label": "Small" },
        { "value": "p-x-small", "label": "Extra Small" }        
      ]
    }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "Title",
      "settings": [
