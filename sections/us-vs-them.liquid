{{ 'apex-theme.css' | asset_url | stylesheet_tag }}
{%- style -%}
     .us-vs-them{
     padding-top: {{- section.settings.padding_top -}}px;
     padding-bottom: {{- section.settings.padding_bottom -}}px;
  }
  @media only screen and (max-width: 768px) {
   .us-vs-them{
     padding-top: {{- section.settings.padding_top_mobile -}}px ;
     padding-bottom: {{- section.settings.padding_bottom_mobile -}}px ;
  }
  }
{%- endstyle -%}

<div class="us-vs-them m-color-{{ section.settings.color_scheme }}">
  <div class="us-them-row">
    <div class="us-them-content">
      <div class="content-box">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'title' %}
              <h2
                class="us-them-title {{ section.settings.heading_type }}"               
              >
                {{ block.settings.title }}
              </h2>
            {% when 'description' %}
              <div
                class="us-them-description {{ section.settings.des_size}}"
              
              >
                {{ block.settings.description }}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
    {% if section.settings.img != blank %}
      <div class="us-them-img">
        <img src="{{ section.settings.img | img_url: 'master' }}" alt="">
      </div>
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "APEX US vs Them",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
