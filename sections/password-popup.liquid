<style>
  .pass--popup-overlay{
    position: fixed;
    top: {{ section.settings.overlay_top_position }}px; 
    left: 0;
    width: 100%; height: 100%;
    background: rgba(0,0,0,0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
  }
  .pass--popup-content {
    background: white;
    padding: 2rem;
    border-radius: 10px;
    text-align: center;
    width: 500px;
    max-width: 100%;
    height: 500px;
    max-height: 100vh;
  }
</style>

{% if collection.handle == section.settings.collection.handle %}
  <div id="password-popup" class="pass--popup-overlay">
    <div class="pass--popup-content">
      <h2 class="pass--popup-title">Enter Password to View Collection</h2>
      <input type="password" id="popup-password" placeholder="Enter password">
      <button onclick="checkPassword()">Submit</button>
      <p id="error-message" style="color: red; display: none;">Incorrect password</p>
    </div>
  </div>
{% endif %}


  <script>
    const correctPassword = "{{ section.settings.password | escape }}";

    function checkPassword() {
      const userPassword = document.getElementById("popup-password").value;
      const errorMessage = document.getElementById("error-message");

      if (userPassword === correctPassword) {
        localStorage.setItem("collectionAccess_{{ section.settings.collection.handle }}", "true");
        document.getElementById("password-popup").style.display = "none";
      } else {
        errorMessage.style.display = "block";
      }
    }

    window.onload = function() {
      if (localStorage.getItem("collectionAccess_{{ section.settings.collection.handle }}") === "true") {
        document.getElementById("password-popup").style.display = "none";
      } else {
        document.getElementById("password-popup").style.display = "flex";
      }
    };
  </script>


{% schema %}
{
  "name": "Password Protected",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection to protect"
    },
    {
      "type": "text",
      "id": "password",
      "label": "Password"
    },
    {
      "type": "number",
      "id": "overlay_top_position",
      "label": "Overlay Top Position",
      "default": 0
    },
  ],
  "presets": [
    {
      "name": "Password Protected"
    }
  ]
}
{% endschema %}
