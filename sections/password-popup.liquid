<style>
    .pass--popup-overlay{
      position: fixed;
      top: {{ section.settings.overlay_top_position }}px;
      left: 0;
      width: 100%;
      height: 100%;
      height: calc(var(--vh, 1vh) * 100);
      background: rgba(0,0,0,0.7);
      /* background: {% if section.settings.popup_background != blank %}
        url({{ section.settings.popup_background | img_url:"master" }}) center center / cover no-repeat */
      {% else %}
        rgba(0, 0, 0, 0.7)
      {% endif %};
      display: flex;
      /* display: none; */
      align-items: center;
      z-index: 9999;
      flex-direction: column;
    }
    .pass--popup-content {
      background: #ffffff8c;
      backdrop-filter: blur(40px);
      padding: 2rem;
      border-radius: 10px;
      text-align: center;
      width: 500px;
      max-width: 100%;
      /* height: 500px; */
      max-height: 100vh;
      margin: auto;
  }

  .pass--popup-content-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    position: relative;
}

.bg-image-popup {
    position: absolute;
    inset: 0;
    object-fit: cover;
    width: 100%;
}

.bg-image-popup img {
    width: 100%;
    height: 100%;
}
    input#popup-password {
      padding: 10px;
      margin-top: 20px;
      display: block;
      width: 100%;

    }
    .pass--popup-content button {
      /* border: 1px solid #000; */
      padding: 10px;
      display: block;
      width: 100%;
      margin-top: 20px;
    }
    .pass--popup-header {
      display: flex;
      align-items: center;
      position: relative;
      width: 100%;
      justify-content: center;
      background: #fff;
      /* margin-bottom: 30px; */
      padding: 10px 0;
  }
  a.popup-back {
      position: absolute;
      left: 70px;
      /* color: #fff; */
      font-size: 20px;

  }
  img.popup-logo {
      max-width: 150px;
  }
  @media (max-width: 600px){
    a.popup-back {
      left: 20px;
    }
  }
  body.scroll-lock {
    overflow: hidden;
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
</style>
{% if section.settings.popup_background_mobile != blank %}
  <style>
    @media (max-width: 767px) {
      .pass--popup-overlay {
        background: url({{ section.settings.popup_background_mobile |  img_url:"master" }}) center center / cover no-repeat !important;
      }
    }
  </style>
{% endif %}

{% assign show_popup = false %}

{% for allowed in settings.allowed_handles %}
  {% if allowed.id == collection.id %}
    {% assign show_popup = true %}
  {% endif %}
{% endfor %}

{% if show_popup %}
  <div id="password-popup" class="pass--popup-overlay">
    <div class="pass--popup-header">
      {% if section.settings.logo %}
        <a href="/"><img src="{{ section.settings.logo | image_url: width: 100 }}" alt="Logo" class="popup-logo"></a>
      {% else %}
        <a href="/">{{ section.settings.logo_text }}</a>
      {% endif %}
      {% if section.settings.show_back_button %}
        <a href="javascript:history.back()" class="popup-back">&larr; Zur√ºck </a>
      {% endif %}
    </div>

   <div class="pass--popup-content-wrapper">
      <div class="bg-image-popup">
        <img src="{{ section.settings.popup_background | img_url:"master"  }}" alt="image">
      </div>

     <div class="pass--popup-content">      
        <h2 class="pass--popup-title">{{ section.settings.header_title }}</h2>
        <input type="password" id="popup-password" placeholder="{{ section.settings.place_holder }}">
        <button class="m-button m-button--primary " onclick="checkPassword()">{{ section.settings.button_text }}</button>
        <p id="error-message" style="color: red; display: none;">{{ section.settings.error_msg }}</p>
      </div>
   </div>

  </div>
{% endif %}

{% schema %}
{
  "name": "Password Protected",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "Logo"
    },
    {
      "type": "checkbox",
      "id": "show_back_button",
      "label": "Show back button",
      "default": true
    },

    {
      "type": "number",
      "id": "overlay_top_position",
      "label": "Overlay Top Position",
      "default": 0
    },
    {
      "type": "image_picker",
      "id": "popup_background",
      "label": "Popup Background Image"
    },
    {
      "type": "image_picker",
      "id": "popup_background_mobile",
      "label": "Popup Background Image (Mobile)"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "header_title",
      "label": "Popup Title",
      "default": "Enter Password"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Submit"
    },
    {
      "type": "text",
      "id": "place_holder",
      "label": "Password Placeholder",
      "default": "Password"
    },
    {
      "type": "text",
      "id": "error_msg",
      "label": "Error Message",
      "default": "Incorrect password. Please try again."
    }

  ],
  "presets": [
    {
      "name": "Password Protected"
    }
  ]
}
{% endschema %}
