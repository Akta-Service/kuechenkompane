<style>
  .pass--popup-overlay{
    position: fixed;
    top: {{ section.settings.overlay_top_position }}px; 
    left: 0;
    width: 100%; height: 100%;
    background: rgba(0,0,0,0.7);
    background: {% if section.settings.popup_background != blank %}
      url({{ section.settings.popup_background | image_url }}) center center / cover no-repeat
    {% else %}
      rgba(0, 0, 0, 0.7)
    {% endif %};
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    display: none;
  }
  .pass--popup-content {
    background: #ffffffc4;
    backdrop-filter: blur(10px);
    padding: 2rem;
    border-radius: 10px;
    text-align: center;
    width: 500px;
    max-width: 100%;
    height: 500px;
    max-height: 100vh;
}
  input#popup-password {
    padding: 10px;
    margin-top: 20px;
    display: block;
    width: 100%;
    
  }
  .pass--popup-content button {
    /* border: 1px solid #000; */
    padding: 10px;
    display: block;
    width: 100%;
    margin-top: 20px;
  }

</style>

{% if collection.handle == section.settings.collection.handle %}
  <div id="password-popup" class="pass--popup-overlay">
    <div class="pass--popup-content">
      <h2 class="pass--popup-title">Enter Password to View Collection</h2>
      <input type="password" id="popup-password" placeholder="Enter password">
      <button class="m-button m-button--primary " onclick="checkPassword()">Submit</button>
      <p id="error-message" style="color: red; display: none;">Incorrect password</p>
    </div>
  </div>
{% endif %}


<script>
  const correctPassword = "{{ section.settings.password | escape }}";
  const collectionKey = "collectionAccess_{{ section.settings.collection.handle }}";

  function checkPassword() {
    const userPassword = document.getElementById("popup-password").value;
    const errorMessage = document.getElementById("error-message");

    if (userPassword === correctPassword) {
      localStorage.setItem(collectionKey, "true");
      document.getElementById("password-popup").style.display = "none";
    } else {
      errorMessage.style.display = "block";
    }
  }

  window.onload = function () {
    if (localStorage.getItem(collectionKey) === "true") {
      
      document.getElementById("password-popup").style.display = "none";
    } else {
      document.getElementById("password-popup").style.display = "flex";
     
    }
  };
</script>



{% schema %}
{
  "name": "Password Protected",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection to protect"
    },
    {
      "type": "text",
      "id": "password",
      "label": "Password"
    },
    {
      "type": "number",
      "id": "overlay_top_position",
      "label": "Overlay Top Position",
      "default": 0
    },
    {
      "type": "image_picker",
      "id": "popup_background",
      "label": "Popup Background Image"
    }
  ],
  "presets": [
    {
      "name": "Password Protected"
    }
  ]
}
{% endschema %}
