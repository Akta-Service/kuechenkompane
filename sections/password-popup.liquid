<style>
  .pass--popup-overlay{
    position: fixed;
    top: {{ section.settings.overlay_top_position }}px; 
    left: 0;
    width: 100%; height: 100%;
    background: rgba(0,0,0,0.7);
    background: {% if section.settings.popup_background != blank %}
      url({{ section.settings.popup_background | image_url }}) center center / cover no-repeat
    {% else %}
      rgba(0, 0, 0, 0.7)
    {% endif %};
    display: flex;
    align-items: center;
    /* justify-content: center; */
    z-index: 9999;
    display: none;
    flex-direction: column;
  }
  .pass--popup-content {
    background: #ffffff8c;
    backdrop-filter: blur(40px);
    padding: 2rem;
    border-radius: 10px;
    text-align: center;
    width: 500px;
    max-width: 100%;
    /* height: 500px; */
    max-height: 100vh;
    margin: auto;
}
  input#popup-password {
    padding: 10px;
    margin-top: 20px;
    display: block;
    width: 100%;
    
  }
  .pass--popup-content button {
    /* border: 1px solid #000; */
    padding: 10px;
    display: block;
    width: 100%;
    margin-top: 20px;
  }
  .pass--popup-header {
    display: flex;
    align-items: center;
    position: relative;
    width: 100%;
    justify-content: center;
    background: #fff;
    margin-bottom: 30px;
    padding: 10px 0;
}
a.popup-back {
    position: absolute;
    left: 70px;
    /* color: #fff; */
    font-size: 20px;
 
}
img.popup-logo {
    max-width: 150px;
}
@media (max-width: 600px){
  a.popup-back {    
    left: 20px; 
  }
}
</style>
{% if section.settings.popup_background_mobile != blank %}
  <style>
    @media (max-width: 767px) {
      .pass--popup-overlay {
        background: url({{ section.settings.popup_background_mobile | image_url }}) center center / cover no-repeat !important;
      }
    }
  </style>
{% endif %}


{% if collection.handle == section.settings.collection.handle %}
    <div id="password-popup" class="pass--popup-overlay">
      <div class="pass--popup-header">
    {% if section.settings.logo %}
      <a href="/"><img src="{{ section.settings.logo | image_url: width: 100 }}" alt="Logo" class="popup-logo"></a>
      {%  else %} 
      <a href="/">{{ section.settings.logo_text }}</a>
    {% endif %}
    {% if section.settings.show_back_button %}
      <a href="javascript:history.back()" class="popup-back">&larr; Back</a>
    {% endif %}
    </div>
    <div class="pass--popup-content">
      <h2 class="pass--popup-title">Enter Password to View Collection</h2>
      <input type="password" id="popup-password" placeholder="Enter password">
      <button class="m-button m-button--primary " onclick="checkPassword()">Submit</button>
      <p id="error-message" style="color: red; display: none;">Incorrect password</p>
    </div>
  </div>
{% endif %}


<script>
  const correctPassword = "{{ section.settings.password | escape }}";
  const collectionKey = "collectionAccess_{{ section.settings.collection.handle }}";

  function checkPassword() {
    const userPassword = document.getElementById("popup-password").value;
    const errorMessage = document.getElementById("error-message");

    if (userPassword === correctPassword) {
      localStorage.setItem(collectionKey, "true");
      document.getElementById("password-popup").style.display = "none";
    } else {
      errorMessage.style.display = "block";
    }
  }

  window.onload = function () {
    if (localStorage.getItem(collectionKey) === "true") {
      
      document.getElementById("password-popup").style.display = "none";
    } else {
      document.getElementById("password-popup").style.display = "flex";
     
    }
  };
</script>



{% schema %}
{
  "name": "Password Protected",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "Logo"
    },
    {
      "type": "checkbox",
      "id": "show_back_button",
      "label": "Show back button",
      "default": true
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection to protect"
    },
    {
      "type": "text",
      "id": "password",
      "label": "Password"
    },
    {
      "type": "number",
      "id": "overlay_top_position",
      "label": "Overlay Top Position",
      "default": 0
    },
    {
      "type": "image_picker",
      "id": "popup_background",
      "label": "Popup Background Image"
    },
    {
      "type": "image_picker",
      "id": "popup_background_mobile",
      "label": "Popup Background Image (Mobile)"
    }

  ],
  "presets": [
    {
      "name": "Password Protected"
    }
  ]
}
{% endschema %}
