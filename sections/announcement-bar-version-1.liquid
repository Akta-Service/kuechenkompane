<style>
  /* common css end  */
  .announcement-container {
    max-width: 1320px;
    margin: 0 auto;
    padding: 0 15px;
  }

  .announcement-bar {
    background: {{ section.settings.bg_color }};   
    padding-top: {{ section.settings.pt}}px;
    padding-bottom: {{ section.settings.pb}}px;
  }

  .announcement-bar-content {
    text-align: center;
  }

  .announcement-bar-content strong {
    color: {{ section.settings.strong_color }};  
    font-weight: 700;
    line-height: 1;
  }

  .announcement-bar-content p {
    font-size: {{ section.settings.text_size }}px;
    color: {{ section.settings.text_color }};
    line-height: 1;
  }


</style>
<div class="announcement-bar">
  <div class="announcement-container">
    <div class="announcement-bar-content">
      <strong style=" font-size: {{- section.settings.ann_title_size -}}px; color:{{ section.settings.ann_title_color }} ;">
        {{- section.settings.ann_title -}}
      </strong>
      {{ section.settings.text }}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Announcement Bar 1",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#be3220"
    },
    {
      "type": "range",
      "id": "pt",
      "label": "Padding Top",
      "default": 15,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "pb",
      "label": "Padding Bottom",
      "default": 15,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "header",
      "content": "Title"
    },
    {
      "type": "text",
      "id": "ann_title",
      "label": "Title",
      "default": "LEI OF LOVE"
    },
    {
      "type": "range",
      "id": "ann_title_size",
      "label": "Font Size",
      "default": 16,
      "min": 10,
      "max": 40,
      "step": 1
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Jetzt für 69 €* shoppen & ein <strong>kostenloses Schmuckstück</strong> auswählen!</p>"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text Font Size",
      "default": 16,
      "min": 10,
      "max": 30,
      "step": 1
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "color",
      "id": "ann_title_color",
      "label": "Title Color",
      "default": "#f4f0ec"
    },
    {
      "type": "color",
      "id": "strong_color",
      "label": "Strong Text Color",
      "default": "#f4f0ec"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#f4f0ec"
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar 1",
      "settings": {}
    }
  ]
}
{% endschema %}
