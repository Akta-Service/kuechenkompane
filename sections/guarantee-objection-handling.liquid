<style>
      .guarantie-area{
        margin-top: {{ section.settings.margin_top }}px;
        margin-bottom: {{ section.settings.margin_bottom }}px;
      }

    ul {
        list-style: none;
    }

    a {
        text-decoration: none;
    }

    img {
        width: 100%;
    }

    /* common css end  */
    .gurantie-content {
        padding: 50px 10px;
        max-width: 650px;
        margin: 0 auto;
    }

    .container {
        max-width: 1440px;
        background: {{ section.settings.bg_color |  default: '#fafafb'  }};
        margin: 0 auto;
    }

    .gurantie-img {
        max-width: 145px;
        height: auto;
        margin: 0 auto;
    }

    .gurante-text {
        text-align: center;
        margin-top: 20px;
    }

    .gurante-text h3 {
        font-size: {{ section.settings.title_size}}px;
        color: {{ section.settings.title_color }};
        line-height: 1;
        margin-bottom: 20px;
    }

    .gurante-text p {
        font-size: {{ section.settings.text_size}}px;
        color: {{ section.settings.text_color }};
        margin-bottom: 30px;
    }

    .gurantie-btn a {
        color: #121212;
        font-size: 18px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        position: relative;
        font-weight: 500;
        transition: .3s;
    }

    .gurantie-btn a i {
        font-size: 14px;
        color: #121212;
    }

    .gurantie-btn a::after {
        position: absolute;
        content: '';
        width: 100%;
        height: 2px;
        background: #121212;
        bottom: -6px;
        left: 0;
        transition: .3s;
    }

    .gurantie-btn a:hover::after {
        width: 0;
    }
    .gurantie-btn img {
      width: 24px;
      height: 24px;
  }
    @media (max-width: 767px) {
      .guarantie-area{
        margin-top: {{ section.settings.margin_top_mobile }}px;
        margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
      }
    }
</style>
<div class="guarantie-area">
  <div class="container">
    <div class="gurantie-content">
      {% if section.settings.icon_img != blank %}
        <div class="gurantie-img">
          <img src="{{  section.settings.icon_img |  img_url: 'large'}}" alt="icon">
        </div>
      {% endif %}
      <div class="gurante-text">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'title' %}
              <h3>{{ block.settings.title }}</h3>
            {% when 'text' %}
              <p>
                {{ block.settings.text }}
              </p>
            {% when 'button' %}
              <div class="gurantie-btn">
                <a href="{{ block.settings.btn_link }}">
                  {{ block.settings.btn_text }}
                  <img
                    src="https://cdn.shopify.com/s/files/1/0018/5329/2643/files/888647-512.png?v=1739294506"
                    alt="arrow"
                  >
                </a>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Guarantee Objection",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#fafafb"
    },
    {
      "type": "image_picker",
      "id": "icon_img",
      "label": "Icon Image"
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Margin Top",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "margin_top_mobile",
      "label": "Margin Top (Mobile)",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "label": "Margin Bottom (Mobile)",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "header",
      "content": "heading"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Title Size",
      "default": 40,
      "min": 10,
      "max": 50,
      "step": 1
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#121212"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text Size",
      "default": 18,
      "min": 10,
      "max": 30,
      "step": 1
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#454545"
    }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "Title",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "100% money-back guarantee"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Try Maniko Nails risk-free for 45 days. If you are not 100% satisfied, we will refund your full purchase price, no questions asked."
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "btn_text",
          "label": "Button Text",
          "default": "Learn more"
        },
        {
          "type": "url",
          "id": "btn_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Guarantee Objection"
    }
  ]
}
{% endschema %}
