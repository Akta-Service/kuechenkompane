{% comment %}
  Section: Akta Collection Grid
{% endcomment %}

{{ 'akta-collection-grid.css' | asset_url | stylesheet_tag }}

<style>
  .akta-collection-pagination.akta-pagination-circle a,
  .akta-collection-pagination.akta-pagination-circle .active {
    border-radius: 50%;
  }
  .section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media (max-width: 768px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top | times: 0.5 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.5 }}px;
    }
  }
  .akta-collection-grid-item:hover img{
    transform: scale(1.2);
  }

  {%- if section.settings.hover_second_image -%}

    /* Hover Effect = Zoom + Swap */
    .akta-collection-grid-item:hover .akta-image-default {
      opacity: 0;
      transform: scale(1.1);
    }

    .akta-collection-grid-item:hover .akta-image-hover {
      opacity: 1;
      transform: scale(1.1);
    }
  {%- endif -%}
</style>

<div class="akta-collection-section section-{{ section.id }}">
  {% if section.settings.show_section_header %}
    <div class="akta-collection-header">
      {% if section.settings.section_title != blank %}
        <h2 class="akta-collection-title">{{ section.settings.section_title }}</h2>
      {% endif %}
      {% if section.settings.section_description != blank %}
        <p class="akta-collection-description">{{ section.settings.section_description }}</p>
      {% endif %}
    </div>
  {% endif %}

  {% assign selected_collection = section.settings.collection %}
  {% if selected_collection == blank %}
    {% assign current_collection = collection %}
  {% else %}
    {% assign current_collection = collections[selected_collection] %}
  {% endif %}

  {% paginate current_collection.products by section.settings.products_limit %}
    <div class="akta-collection-grid">
      {% for product in current_collection.products %}
        <div class="akta-collection-grid-item">
          <div class="akta-collection-grid-image-wrapper">
            {% if product.available %}
            {% else %}
              <span class="akta-sold-out-badge">Ausverkauft</span>
            {% endif %}

            <a href="{{ product.url }}">
              {%- if section.settings.use_metafield_image and product.metafields.custom.product_image != blank -%}
                <!-- Show main image from metafield -->
                <img
                  src="{{ product.metafields.custom.product_image | image_url }}"
                  alt="{{ product.title }}"
                  class="akta-collection-grid-image akta-image-default"
                  width="100%"
                  height=""
                  {% if forloop.index <= 4 %}
                    loading="eager" fetchpriority="high"
                  {% else %}
                    loading="lazy"
                  {% endif %}
                >
              {%- else -%}
                <!-- Show normal featured image -->
                {%- if product.featured_image -%}
                  <img
                    src="{{ product.featured_image | image_url }}"
                    alt="{{ product.title }}"
                    class="akta-collection-grid-image akta-image-default"
                    width="100%"
                    height=""
                    {% if forloop.index <= 4 %}
                      loading="eager" fetchpriority="high"
                    {% else %}
                      loading="lazy"
                    {% endif %}
                  >
                {%- endif -%}
              {%- endif -%}

              <!-- Hover image always comes from product.images[1] -->
              {%- if section.settings.hover_second_image and product.images.size > 1 -%}
                <img
                  src="{{ product.images[1] | image_url }}"
                  alt="{{ product.title }}"
                  class="akta-collection-grid-image akta-image-hover"
                  width="100%"
                  height=""
                  {% if forloop.index <= 4 %}
                    loading="eager" fetchpriority="high"
                  {% else %}
                    loading="lazy"
                  {% endif %}
                >
              {%- endif -%}
            </a>
          </div>

          <div class="akta-collection-grid-content">
            {% if section.settings.show_product_ratings %}
              <div
                class="loox-rating"
                data-id="{{ product.id }}"
                data-rating="{{ product.metafields.loox.avg_rating }}"
                data-raters="{{ product.metafields.loox.num_reviews }}"
              ></div>
            {% endif %}

            <a href="{{ product.url }}">
              <h3 class="akta-collection-grid-title">{{ product.title }}</h3>
            </a>

            <div class="akta-collection-grid-prices">
              {% if product.compare_at_price > product.price %}
                <span class="akta-collection-grid-price">{{ product.price | money }}</span>
                <span class="akta-collection-grid-compare">{{ product.compare_at_price | money }}</span>
              {% else %}
                <span class="akta-collection-grid-price">{{ product.price | money }}</span>
              {% endif %}
            </div>
            {% if section.settings.show_stock_status %}
              {% render 'stock-count-status', product: product, custom_class: 'ml-15 collection-stock' %}
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    {% if paginate.pages > 1 %}
      <nav class="akta-collection-pagination akta-pagination-{{ section.settings.pagination_style }}">
        <ul>
          {% if paginate.previous %}
            <li><a href="{{ paginate.previous.url }}" class="prev">«</a></li>
          {% endif %}

          {% for part in paginate.parts %}
            {% if part.is_link %}
              <li>
                <a href="{{ part.url }}">{{ part.title }}</a>
              </li>
            {% else %}
              <li class="active">{{ part.title }}</li>
            {% endif %}
          {% endfor %}

          {% if paginate.next %}
            <li><a href="{{ paginate.next.url }}" class="next">»</a></li>
          {% endif %}
        </ul>
      </nav>
    {% endif %}
  {% endpaginate %}
</div>

{% schema %}
{
  "name": "Akta Collection Grid",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom (px)",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0
    },

    {
      "type": "header",
      "content": "Section Header Settings"
    },
    {
      "type": "checkbox",
      "id": "show_section_header",
      "label": "Show Section Header",
      "default": false
    },

    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Featured Collection",
      "visible_if": "{{ section.settings.show_section_header }}"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Explore our best-selling products.",
      "visible_if": "{{ section.settings.show_section_header }}"
    },
    {
      "type": "header",
      "content": "Custom Collection Settings"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection",
      "info": "Leave blank if not needed."
    },
    {
      "type": "header",
      "content": "Product To show"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Number of Products",
      "min": 1,
      "max": 50,
      "step": 1,
      "default": 20
    },
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "checkbox",
      "id": "use_metafield_image",
      "label": "Use Metafield Image",
      "default": false
    },

    {
      "type": "checkbox",
      "id": "hover_second_image",
      "label": "Enable Hover 2nd Image",
      "default": false
    },
    {
      "type": "header",
      "content": "Pagination Style"
    },
    {
      "type": "select",
      "id": "pagination_style",
      "label": "Select Style",
      "default": "circle",
      "options": [
        {
          "value": "circle",
          "label": "Circle"
        },
        {
          "value": "square",
          "label": "Square"
        }
      ]
    },
    {
      "type": "header",
      "content": "Ratings"
    },
    {
      "type": "checkbox",
      "id": "show_product_ratings",
      "label": "Show Product Ratings",
      "default": false
    },
    {
      "type": "header",
      "content": "stock count"
    },
    {
      "type": "checkbox",
      "id": "show_stock_status",
      "label": "Show stock count",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Akta Collection Grid",
      "category": "Collection"
    }
  ]
}
{% endschema %}
