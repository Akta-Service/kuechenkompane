<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  ul {
    list-style: none;
  }

  a {
    text-decoration: none;
  }



  /* common css end   */
  .trustpilot-area{
    margin-top: {{ section.settings.mt}}px;
    margin-bottom: {{ section.settings.mb}}px;
  }
  .trustpilot-area .container {
    max-width: 1680px;
    margin: 0 auto;
    padding: 0 70px;
  }

  .testimonial-slider-wrapper {
    padding: 0 30px;
    overflow: hidden;
    position: relative;
  }

  .trustpilot-heading {
    margin-bottom: 50px;
  }

  .trustpilot-testimonials-item {
    background-color: #f8f9fa;
    border-radius: 2px;
    box-shadow: 0 1px 0 0 rgba(182, 196, 210, 0.4);
    line-height: 16px;
    padding: 15px;
    position: relative;
  }

  .trustpilot-title {
    font-size: {{ section.settings.t_size }}px;
    color: {{ section.settings.t_color }};
    text-transform: uppercase;
    font-family: 'Inter', sans-serif;
    font-weight: 700;
  }

  .highligt-text {
    font-style: italic;
    color: {{ section.settings.h_text_color }};
  }



  .testimonial-review {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 10px;
  }

  .review-verified {
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .review-star svg {
    width: 100px;
  }

  .review-verified svg {
    width: 14px;
    height: 14px;
  }

  .review-verified span {
    color: #6c6c85;
    font-size: 13px;
  }

  .testimonial-title {
    color: #1f2936;
    font-size: 14px;
    font-weight: 700;
    height: 16px;
    margin: 0 0 10px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .testimonial-content p {
    color: #191919;
    font-size: 13px;
    line-height: 16px;
    max-height: 50px;
    overflow: hidden;
    word-wrap: break-word;
  }

  .testimonial-user-info {
    margin-top: 30px;
  }

  .testimonial-user {
    font-weight: 700;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 12px;
    color: #00000099;
  }

  .testimonial-date {
    font-size: 12px;
    color: #00000099;
  }

  .swiper-button-next svg {
    transform: rotate(180deg);
  }

  .swiper-button-next::after,
  .swiper-button-prev::after {
    display: none;
  }

  .icon.icon-arrow-next,
  .icon.icon-arrow-prew {
    color: #1e1e1e;
    font-size: 34px;
    width: 10px;
    height: 10px;
    border-radius: 100%;
  }

  .swiper-button-next,
  .swiper-button-prev {
    width: 24px;
    height: 24px;
    border-radius: 100%;
    line-height: 24px;
  }

  .best-sell-product {
    overflow: visible;
  }
  @media only screen and (max-width: 767px) {
    .trustpilot-area .container {
      padding: 0 20px;
    }
    .trustpilot-area{
      margin-top: {{ section.settings.mt_mobile}}px;
      margin-bottom: {{ section.settings.mb_mobile}}px;
    }
    .swiper-button-prev {
        left: 0;
        right: auto;
    }
    .swiper-button-next {
    right: 0;
    left: auto;
     }
     .trustpilot-heading {
      margin-bottom: 30px;
    }
  }
  @media only screen and (max-width: 520px) {
    .trustpilot-title {
      font-size: 24px;
    }
  }
</style>

