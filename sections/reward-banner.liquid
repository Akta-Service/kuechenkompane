<style>
@import url('https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Racing+Sans+One&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap');



.hero-bg {
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  background-image: url({{ section.settings.bg_image | image_url }});
}

.hero-container {
  max-width: 1200px;
  padding: 0 15px;
  margin: 0 auto;
}

.hero-content {
  padding: 200px 0 130px 0;
  max-width: 620px;
}

.hero-title {
  padding: 0;
  margin: 0;
  font-weight: 700;
  font-size: 72px;
  font-family: "Montserrat", sans-serif;
  line-height: 1.25em;
  letter-spacing: 0px;
  color: #000;
}


.hero-text {
  margin: 0;
  font-size: 18px;
  font-family: "Roboto", sans-serif;
  font-weight: 500;
  text-transform: none;
  font-style: normal;
  text-decoration: none;
  line-height: 1.4em;
  letter-spacing: 0px;
  padding: 20px 0 34px 0;
}

.hero-btn {
  font-size: 15px;
  font-family: "Roboto", sans-serif;
  font-weight: 600;
  line-height: 1.25em;
  letter-spacing: 0px;
  color: #fff;
  background-color: #fa8526;
  border-style: none;
  border-radius: 40px;
  transition-duration: .4s;
  padding: 15px 24px;
  text-decoration: none;
  transition: 0.4s all ease-in-out;
}

.hero-btn:hover {
  background-color: #000;
}

@media (max-width: 992px) {
  .hero-title {
    font-size: 45px;
  }

  .hero-content {
    max-width: 520px;
  }
}

@media (max-width: 767px) {
  .hero-bg {
    background-image: url({{ section.settings.bg_image_mobile | image_url }});
  }

  .hero-content {
    max-width: 100%;
    padding: 80px 0 500px 0;
    text-align: center;
  }

  .hero-title {
  font-size: 30px;
}


.hero-text {
  font-size: 14px;
  padding: 10px 0 30px 0;
}
}
</style>
<section class="hero-section">
  <div class="hero-bg">
      <div class="hero-container">
          <div class="hero-content">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'title' %}
                  <h1 class="hero-title" {{ block.shopify_attributes }}>{{ block.settings.title }}</h1>
                {% when 'text' %}
                  <p class="hero-text" {{ block.shopify_attributes }}>{{ block.settings.text }}</p>

                {% when 'Button' %}
                  <a {{ block.shopify_attributes }} class="hero-btn" href="{{ block.settings.btn_url }}">{{ block.settings.btn_text }}</a>


            {% endcase %}
          {% endfor %}


          </div>
      </div>
  </div>
</section>


{% schema %}
{
  "name": "Reward Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image (Desktop)"
    },
    {
      "type": "image_picker",
      "id": "bg_image_mobile",
      "label": "Background Image (Mobile)"
    }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "Title",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Your Reward Banner Title"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Your reward banner description goes here."
        }
      ]
    },
    {
      "type": "Button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "btn_text",
          "label": "Button Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": "Button URL"
        }
      ]
    }
  ],  
  "presets": [
    {
      "name": "Reward Banner",
      "blocks": [
        {
          "type": "title"
        },
        {
          "type": "text"
        },
        {
          "type": "Button"
        }
      ]
    }
  ]
}
{% endschema %}