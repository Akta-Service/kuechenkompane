<style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap');

    
    /* common css end  */
    .logo-quote-area {     
      padding: {{ section.settings.ver_p}}px {{ section.settings.hr_p}}px;
    }

    .logo-quote-content {
          max-width: 860px;
          margin: 0 auto;
          text-align: center;
      }
    .quote-content {
      font-size: 24px;     
      font-family: "Roboto", sans-serif;
      margin-bottom: 20px;
      display: none;
    }
    .quote-content.active {
          display: block;
      }
    .logo-quote-title h2 {
      font-size: {{ section.settings.heading_size }}px;
      text-transform: uppercase;     
      line-height: 1;
      margin-bottom: 60px;
      font-family: 'Roboto', serif;
      letter-spacing: -2px;
      text-align: center;
    }

    .logo-item {
      max-width: 230px;
      position: relative;
    }

    .logo-item img {
      opacity: 0.5;
      transition: 0.3s;
    }

    .logo-item img:hover {
      opacity: 1;
    }

    .logo-item::after {
      position: absolute;
      content: '';
      width: 100%;
      height: 2px;      
      bottom: -5px;
      left: 0;
      opacity: 0;
      visibility: hidden;
    }

    .logo-item:hover::after {
      opacity: 1;
      visibility: visible;
    }

    .logo-item-list {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }

    .logo-item.active img {
      opacity: 1;
    }

    .logo-item.active::after {
      opacity: 1;
      visibility: visible;
    }

  .logo-item-list button {
      background: none;
      border: none;
  }
  {% if section.settings.invert_color %}
  .logo-item img {
    filter: invert(1);
  }
  {% endif %}
    @media only screen and (max-width: 767px) {
      .logo-quote-area {
        padding: {{ section.settings.ver_p_mobile}}px {{ section.settings.hr_p_mobile}}px;
      }

      .logo-quote-title h2 {
        font-size: 28px;
        font-weight: 700;
      }

      .logo-item {
        max-width: 130px;
      }

      .logo-item-list {
        row-gap: 40px;
      }
    }
</style>
<div class="logo-quote-area m-color-{{ section.settings.color_scheme }}">
  <div class="logo-quote-content">
    {% for block in section.blocks %}
      <div class="quote-content {% if forloop.first %}active{% endif %}" id="{{ forloop.index}}">
        <h3 class="quote-content-text">{{ block.settings.content }}</h3>
      </div>
    {% endfor %}
    <div class="logo-item-list">
      {% for block in section.blocks %}
        {% if block.settings.logo_item_img != blank %}
          <button data-quote="{{ forloop.index}}">
            <div class="logo-item {% if forloop.first %}active{% endif %} ">
              <img src="{{ block.settings.logo_item_img |  img_url: 'large' }}" alt="">
            </div>
          </button>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Logo Quote Selection",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },
    {
      "type": "checkbox",
      "id": "invert_color",
      "label": "Image Color Invert",      
      "info": "(It Will be White Color)"
    },   
    {
      "type": "range",
      "id": "ver_p",
      "label": "Vertical Padding",
      "default": 60,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "hr_p",
      "label": "Horizontal Padding",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "ver_p_mobile",
      "label": "Vertical Padding (Mobile)",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "hr_p_mobile",
      "label": "Horizontal Padding (Mobile)",
      "default": 20,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Size",
      "default": 48,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#111111"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Logo Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_item_img",
          "label": "Logo Image"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Quote Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo Quote Selection",
      "settings": {}
    }
  ]
}
{% endschema %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const buttons = document.querySelectorAll('.logo-item-list button');

    buttons.forEach((button) => {
      button.addEventListener('click', function () {
        const quoteId = this.getAttribute('data-quote');
        document.querySelectorAll('.quote-content').forEach((q) => q.classList.remove('active'));

        document.querySelectorAll('.logo-item').forEach((item) => item.classList.remove('active'));

        const quoteContent = document.getElementById(quoteId);
        if (quoteContent) {
          quoteContent.classList.add('active');
        }

        const logoItem = this.querySelector('.logo-item');
        if (logoItem) {
          logoItem.classList.add('active');
        }
      });
    });
  });
</script>
