<style>
  @import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap');

  ul {
    list-style: 0;
  }

  a {
    text-decoration: none;
  }



  /* common css end  */
  .logo-quote-area {
    background: {{ section.settings.bg-color |  default: '#ff6723' }} ;
    padding: {{ section.settings.ver_p}}px 0;
  }

  .logo-quote-content {
    max-width: 860px;
    margin: 0 auto;
  }

  .logo-quote-title h2 {
    font-size: {{ section.settings.heading_size }}px;
    text-transform: uppercase;
    color: {{ section.settings.heading_color }};
    line-height: 1;
    margin-bottom: 60px;
    font-family: 'Roboto', serif;
    letter-spacing: -2px;
    text-align: center;
  }

  .logo-item {
    max-width: 230px;
    position: relative;
  }

  .logo-item img {
    opacity: 0.5;
    transition: 0.3s;
  }

  .logo-item img:hover {
    opacity: 1;
  }

  .logo-item::after {
    position: absolute;
    content: '';
    width: 100%;
    height: 2px;
    background: black;
    bottom: -5px;
    left: 0;
    opacity: 0;
    visibility: hidden;
  }

  .logo-item:hover::after {
    opacity: 1;
    visibility: visible;
  }

  .logo-item-list {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 0 10px;
  }

  .logo-item.active img {
    opacity: 1;
  }

  .logo-item.active::after {
    opacity: 1;
    visibility: visible;
  }
  @media only screen and (max-width: 767px) {
    .logo-quote-area {
      /*padding: {{ section.settings.ver_p_mobile}}px 0;*/
    }

    .logo-quote-title h2 {
      font-size: 28px;
      font-weight: 700;
    }

    .logo-item {
      max-width: 130px;
    }

    .logo-item-list {
      row-gap: 40px;
      justify-content: space-around;
    }
    .logo-quote-area{
      padding 0 20px;
    }
  }
</style>
<div class="logo-quote-area">
  <div class="logo-quote-content">
    <div class="logo-quote-title">
      <h2>"Best sunglasses for less than 50â‚¬"</h2>
    </div>
    <div class="logo-item-list">
      {% for block in section.blocks %}
        {% if block.settings.logo_item_img != blank %}
          <div class="logo-item {% if forloop.first %}active{% endif %} ">
            <img src="{{ block.settings.logo_item_img |  img_url: 'large' }}" alt="">
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Logo Quote Selection",
  "settings": [
    {
      "type": "color",
      "id": "bg-color",
      "label": "Background Color",
      "default": "#ff6723"
    },
    {
      "type": "range",
      "id": "ver_p",
      "label": "Vertical Padding",
      "default": 60,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "ver_p_mobile",
      "label": "Vertical Padding (Mobile)",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Size",
      "default": 48,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#111111"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Logo Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_item_img",
          "label": "Logo Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo Quote Selection",
      "settings": {}
    }
  ]
}
{% endschema %}
