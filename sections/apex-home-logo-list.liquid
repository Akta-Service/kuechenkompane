
<style>
  .apex-home-logo-list {   
    padding-top: {{ section.settings.pt}}px;
    padding-bottom: {{ section.settings.pb}}px;
  }
  .homeLogo .swiper-slide {
    width: fit-content;
    margin: 0 15px;
  }
  .homeLogo .swiper-wrapper {
    align-items: center;
    transition-timing-function: linear !important;
  }
  .home-logo-img {
    max-width: 170px;
    display: flex;
    align-items: center;
  }
  .home-logo-img img {
    width: 100%;
    height: 100%;
   
  }
  .home-logo-img .invert_img  {
    filter: invert(1);
  }
  @media only screen and (max-width: 768px){
    .apex-home-logo-list {   
      padding-top: {{ section.settings.ptm }}px;
      padding-bottom: {{ section.settings.pbm }}px;
    }
  }
</style>

<div class="apex-home-logo-list m-color-{{ section.settings.color_scheme }}">
  <div class="swiper homeLogo">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% if  block.settings.home_logo != blank %}
        <div class="swiper-slide">
          <div class="home-logo-img">
            <img class="{% if section.settings.invert_color %}invert_img{% endif %}" src="{{ block.settings.home_logo |  img_url: 'large' }}" loading="lazy" alt="logo image">
          </div>
        </div>  
        {% endif %}
      {% endfor %}    
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Apex Home logo list",    
  "settings": [    
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },  
    {
      "type": "range",
      "id": "pt",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "pb",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    },
    {
      "type": "range",
      "id": "ptm",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 40
    },
    {
      "type": "range",
      "id": "pbm",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 40
    },
    {
      "type": "checkbox",
      "id": "invert_color",
      "label": "Invert Image Color",
      "info": "If Use Black Background Then Active Invert Color"      
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable Autoplay",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Enable Loop",
      "default": false
    }
  ],
  "blocks": [
    {
      "name": "Add Home Logo",
      "type": "slide",
      "settings": [
         {
           "type": "image_picker",
           "id": "home_logo",
           "label": "Logo Image"
         }
      ]
    }
  ],
  "presets": [
    {
      "name":"Apex Home logo list"
    }
  ]
}
{% endschema %}

<script>
    const homeLogo = new Swiper(".homeLogo", {     
      slidesPerView: "auto",
      spaceBetween: 20, 
      {% if section.settings.loop %}
      loop: true,
      speed: 3000,
      {% endif %}
      {% if section.settings.autoplay %}
        autoplay: {
          delay: 0,
          disableOnInteraction: false,
        },
      {% endif %}
    });
</script>