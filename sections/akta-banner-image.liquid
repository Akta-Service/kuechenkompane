<div class="akta-banner">
  <div class="akta-banner-image">
    {% if section.settings.banner_image_desktop or section.settings.banner_image_mobile %}
      <picture>
        <!-- Mobile image -->
        {% if section.settings.banner_image_mobile %}
          <source
            media="(max-width: 767px)"
            srcset="{{ section.settings.banner_image_mobile | image_url: width: 767 }}"
          >
        {% endif %}

        <!-- Desktop image -->
        {% if section.settings.banner_image_desktop %}
          <source
            media="(min-width: 768px)"
            srcset="{{ section.settings.banner_image_desktop | image_url: width: 2000 }}"
          >
        {% endif %}

        <!-- Fallback (desktop if uploaded, else mobile) -->
        <img
          src="{% if section.settings.banner_image_desktop %}{{ section.settings.banner_image_desktop | image_url: width: 1200 }}{% else %}{{ section.settings.banner_image_mobile | image_url: width: 767 }}{% endif %}"
          alt="{{ section.settings.alt_text | escape }}"
          width="{% if section.settings.banner_image_desktop %}{{ section.settings.banner_image_desktop.width }}{% else %}{{ section.settings.banner_image_mobile.width }}{% endif %}"
          height="{% if section.settings.banner_image_desktop %}{{ section.settings.banner_image_desktop.height }}{% else %}{{ section.settings.banner_image_mobile.height }}{% endif %}"
          loading="lazy"
          class="banner-image"
        >
      </picture>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Akta Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image_desktop",
      "label": "Desktop Banner Image"
    },
    {
      "type": "image_picker",
      "id": "banner_image_mobile",
      "label": "Mobile Banner Image"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Image Alt Text",
      "default": "Banner"
    }
  ],
  "presets": [
    {
      "name": "Akta Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}
