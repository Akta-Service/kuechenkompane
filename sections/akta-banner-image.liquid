<div class="akta-banner">
  <div class="akta-banner-wrapper">
    <!-- Left text content -->
    <div class="akta-banner-text">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'heading' %}
            <h2 class="banner-heading">{{ block.settings.heading }}</h2>

          {% when 'sub_heading' %}
            <p class="banner-subheading">{{ block.settings.subheading }}</p>
          {% when 'description' %}
            <div class="banner-description">{{ block.settings.description }}</div>
          {% when 'button' %}
            <a href="{{ block.settings.button_link }}" class="banner-button">
              {{ block.settings.button_label }}
            </a>
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Right image -->
    <div class="akta-banner-image">
      {% if section.settings.banner_image_desktop or section.settings.banner_image_mobile %}
        <picture>
          <!-- Mobile -->
          {% if section.settings.banner_image_mobile %}
            <source
              media="(max-width: 767px)"
              srcset="{{ section.settings.banner_image_mobile | image_url: width: 767 }}"
            >
          {% endif %}

          <!-- Desktop -->
          {% if section.settings.banner_image_desktop %}
            <source
              media="(min-width: 768px)"
              srcset="{{ section.settings.banner_image_desktop | image_url: width: 2000 }}"
            >
          {% endif %}

          <!-- Fallback -->
          <img
            src="{{ section.settings.banner_image_desktop | image_url: width: 1200 }}"
            alt="{{ section.settings.alt_text | escape }}"
            width="100%"
            height=""
            class="banner-image"
          >
        </picture>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Banner with Text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Spa Glow Experience"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "~80% Off"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "banner_image_desktop",
      "label": "Desktop Banner Image"
    },
    {
      "type": "image_picker",
      "id": "banner_image_mobile",
      "label": "Mobile Banner Image"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Image Alt Text",
      "default": "Banner Image"
    }
  ],
  "blocks": [
    {
      "type": "heading"
    }
  ],
  "presets": [
    {
      "name": "Banner with Text",
      "category": "Image"
    }
  ]
}
{% endschema %}

<style>
  .akta-banner-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 2rem;
  }
  .akta-banner-text {
    padding: 2rem;
  }
  .banner-heading {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }
  .banner-subheading {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
  }
  .banner-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(to right, #ff6699, #ff3399);
    color: #fff;
    font-weight: 600;
    border-radius: 50px;
    text-decoration: none;
    transition: 0.3s ease;
  }
  .banner-button:hover {
    opacity: 0.9;
  }
  .banner-image {
    width: 100%;
    height: auto;
    display: block;
  }
  @media(max-width: 767px) {
    .akta-banner-wrapper {
      grid-template-columns: 1fr;
      text-align: center;
    }
    .akta-banner-text {
      padding: 1rem;
    }
  }
</style>
