    }
   .banner-description {
      font-size: 20px;
      margin-bottom: 1.5rem;
      font-weight: 500;
      margin-top: 20px;
      font-family: "Roboto", sans-serif;
      color: #f8badb;
  }
    .banner-button {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      {% comment %} background:linear-gradient(to right, #ff6699a6, #ff339985); {% endcomment %}
      {% comment %} background:linear-gradient(to right, #ff6699a6, #ff339985); {% endcomment %}
      color: #fff;
      font-weight: 600;
      border-radius: 50px;
      text-decoration: none;
      transition: 0.3s ease;
    }
    .banner-button:hover {
      opacity: 0.9;
    }
    .banner-image {
      width: 100%;
      height: auto;
      display: block;
    }

     .banner-button {
      display: block;
      padding: 0.75rem 1.5rem;
      background: linear-gradient(to right, #ff6699, #ff3399);
      color: #fff;
      font-size: 28px;
      font-weight: 600;
      border-radius: 50px;
      text-decoration: none;
      transition: 0.3s ease;
    }

    @media(max-width: 767px) {
      .akta-banner-wrapper {
        grid-template-columns: 1fr;
        text-align: center;
      }
      .akta-banner-text {
        padding: 1rem;
      }
    }
</style>
