<style>
    /* common css end  */
    .announcement-container {
      max-width: 1320px;
      margin: 0 auto;
      padding: 0 15px;
    }

    .announcement-bar.bar-{{section.id}} {
      padding-top: {{ section.settings.pt}}px;
      padding-bottom: {{ section.settings.pb}}px;
    }

    .announcement-bar-content {
      text-align: center;
    }
  .ann_title{
    font-size: {{- section.settings.ann_title_size -}}px;
  }
    .announcement-bar-content strong {
      font-weight: 700;
      line-height: 1;
    }

    .announcement-bar-content p {
      font-size: {{ section.settings.text_size }}px;
      line-height: 1;
    }
  @media only screen and (max-width: 768px){
    .announcement-bar-content p {
      font-size: {{ section.settings.text_size_m }}px;
    }
    .ann_title{
    font-size: {{- section.settings.ann_title_size_m -}}px;
  }
  }
  {% if section.settings.sticky_top %}
  .apex-Announcement-sticky{
    position: sticky;
    top: {{ section.settings.top_px }}px;
    z-index: 99999;
  }
  {% endif %}

  {% if section.settings.button_position == 'right_side' %}
    .announcement-container {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 30px;
    }
  {% endif %}
  .button-wrap.button-bottom {
    text-align: center;
     margin-top: 10px;
  }
  .button-wrap a {
    border: 1px solid #ddd;
    padding: 10px 20px;
    display: inline-block;
    border-radius: 5px;
  }
  @media(max-width: 475px){
    .announcement-container {
      gap: 6px;
      flex-direction: column;
    }

  }
</style>

{% assign show_announcement = false %}

{% for block in section.blocks %}
  {% if block.settings.collection != blank and block.settings.collection.handle == collection.handle %}
    {% assign show_announcement = true %}
    {% assign current_block = block %}
  {% endif %}
{% endfor %}

{% if show_announcement %}
  <div id="announcement-bar" class="announcement-bar bar-{{section.id}} m-color-{{ section.settings.color_scheme }}">
    <div class="announcement-container">
      <div class="announcement-bar-content">
        <strong class="ann_title" style="">
          {{ current_block.settings.ann_title }}
        </strong>
        {{ current_block.settings.text }}
      </div>
      {% if section.settings.show_button and section.settings.button_position == 'right_side' %}
        <div class="button-wrap button-right">
          <a href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
        </div>
      {% endif %}
    </div>
    {% if section.settings.show_button and section.settings.button_position == 'bottom' %}
      <div class="button-wrap button-bottom">
        <a href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
      </div>
    {% endif %}
  </div>
{% endif %}

{% if section.settings.enable_scroll_to_show %}
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const announcementBar = document.getElementById('announcement-bar');

      window.addEventListener('scroll', function () {
        if (window.scrollY > {{ section.settings.px_to_show }}) {
          announcementBar.style.display = 'block';
        } else {
          announcementBar.style.display = 'none';
        }
      });
    });
  </script>
{% endif %}

{% schema %}
{
  "name": "APEX Different Ann",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_scroll_to_show",
      "label": "Scroll To Show Announcement",
      "default": false
    },
    {
      "type": "number",
      "id": "px_to_show",
      "label": "Set Px To Show",
      "default": 500
    },
    {
      "type": "number",
      "id": "top_px",
      "label": "Top Position",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "sticky_top",
      "label": "Sticky Announcement",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },
    {
      "type": "range",
      "id": "pt",
      "label": "Padding Top",
      "default": 15,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "range",
      "id": "pb",
      "label": "Padding Bottom",
      "default": 15,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "header",
      "content": "Title"
    },
    {
      "type": "range",
      "id": "ann_title_size",
      "label": "Font Size",
      "default": 16,
      "min": 10,
      "max": 40,
      "step": 1
    },
    {
      "type": "range",
      "id": "ann_title_size_m",
      "label": "Font Size (Mobile)",
      "default": 16,
      "min": 10,
      "max": 40,
      "step": 1
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text Font Size",
      "default": 16,
      "min": 10,
      "max": 30,
      "step": 1
    },
    {
      "type": "range",
      "id": "text_size_m",
      "label": "Text Font Size (Mobile)",
      "default": 16,
      "min": 10,
      "max": 30,
      "step": 1
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show button",
      "default": true
    },
    {
      "type": "select",
      "id": "button_position",
      "label": "Button position",
      "default": "right_side",
      "options": [
        {
          "value": "right_side",
          "label": "Right side"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ]
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button text",
      "default": "Learn more"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button link"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Target Collection To show"
        },
        {
          "type": "text",
          "id": "ann_title",
          "label": "Title",
          "default": "Special Offer"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Exclusive deal for this collection!</p>"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "APEX Different Ann",
      "settings": {}
    }
  ]
}
{% endschema %}
