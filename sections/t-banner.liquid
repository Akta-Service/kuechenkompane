        <div class="snow-banner-text3">60-Day Money Back Guarantee</div>
        <div class="snow-banner-partner">
          <img src="images/banner/banner-partner_3_3.png" alt="Partner">
        </div>
      </div>
    </div>
  </section>
{% endcomment %}

<!-- Intro Section -->
<section class="snow-banner-section">
  <div class="snow-banner-bg">
    {% if section.settings.banner_bg_desktop %}
      <img
        class="snow-banner_desktop"
        src="{{ section.settings.banner_bg_desktop | img_url: 'master' }}"
        alt="Desktop Banner"
      >
    {% endif %}
    {% if section.settings.banner_bg_mobile %}
      <img
        class="snow-banner_mobile"
        src="{{ section.settings.banner_bg_mobile | img_url: 'master' }}"
        alt="Mobile Banner"
      >
    {% endif %}
  </div>

  <div class="snow-banner-container">
    <div class="snow-banner-content">
      <h1 class="snow-banner-title">{{ section.settings.banner_title }}</h1>
      <div class="snow-banner-text1">{{ section.settings.text1 }}</div>

      <div class="snow-banner-collection">
        {% for block in section.blocks %}
          {% if block.settings.image != blank %}
            <div class="snow-banner-collection__thumb">
              <img src="{{ block.settings.image | img_url: 'master' }}" alt="Collection">
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="snow-banner-text2">{{ section.settings.text2 }}</div>
      <div class="snow-banner-text3">{{ section.settings.text3 }}</div>

      {% if section.settings.partner_logo != blank %}
        <div class="snow-banner-partner">
          <img src="{{ section.settings.partner_logo | img_url: 'master' }}" alt="Partner Logo">
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Snow Banner",
  "class": "snow-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_bg_desktop",
      "label": "Desktop Banner Image"
    },
    {
      "type": "image_picker",
      "id": "banner_bg_mobile",
      "label": "Mobile Banner Image"
    },
    {
      "type": "text",
      "id": "banner_title",
      "label": "Banner Title",
      "default": "BLACK FRIDAY IN JULY"
    },
    {
      "type": "richtext",
      "id": "text1",
      "label": "Text 1",
      "default": "<p>For our birthday this year, we are celebrating with Black Friday in July!</p>"
    },
    {
      "type": "textarea",
      "id": "text2",
      "label": "Text 2",
      "default": "#1 Trusted Brand in America* Trusted by Millions"
    },
    {
      "type": "text",
      "id": "text3",
      "label": "Text 3",
      "default": "60-Day Money Back Guarantee"
    },
    {
      "type": "image_picker",
      "id": "partner_logo",
      "label": "Partner Logo"
    },
    {
      "type": "text_alignment",
      "id": "alignment",
      "label": "Text alignment",
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "collection_image",
      "name": "Collection Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Collection Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Snow Banner",
      "category": "Custom",
      "blocks": [{ "type": "collection_image" }, { "type": "collection_image" }, { "type": "collection_image" }]
    }
  ]
}
{% endschema %}
