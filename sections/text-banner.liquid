<style>
  /* common css end  */
  .text-banner-area {   
    padding: 65px 0;
    padding-top: {{ section.settings.pt | default: '65px' }}px;
    padding-bottom: {{ section.settings.pb | default: '65px' }}px;
    margin-top: {{ section.settings.mt | default: '0' }};
    margin-bottom: {{ section.settings.mb | default: '0' }};
  }


  @media only screen and (max-width: 768px) {
    .text-banner-area {
    padding-top: {{ section.settings.pt_mobile | default: section.settings.pt | default: '65px' }};
    padding-bottom: {{ section.settings.pb_mobile | default: section.settings.pb | default: '65px' }};
    margin-top: {{ section.settings.mt_mobile | default: section.settings.mt | default: '0' }};
    margin-bottom: {{ section.settings.mb_mobile | default: section.settings.mb | default: '0' }};
    }
  }



  .text-banner-content {
    text-align: center;
    max-width: 500px;
    padding: 0 15px;
    margin: 0 auto;
  }

  .text-banner-title {
    font-size: {{ section.settings.title_font_size | default: 40 }}px;   
    text-transform: uppercase;
    line-height: 1;
    font-weight: 600;
  }

  .text-banner-subtitle {
    font-size: {{ section.settings.title_font_size }}px;   
    letter-spacing: -0.8px;
    line-height: 44px;
    margin-bottom: 8px;
    font-weight: 600;
  }

  .text-banner-content p {
    font-size: {{ section.settings.text_font_size }}px;   
    line-height: 24px;
  }
  @media only screen and (max-width: 749px) {
    .text-banner-title {
      font-size: {{ section.settings.title_font_size_m }}px; 
    }

    .text-banner-subtitle {
      font-size: {{ section.settings.title_font_size_m }}px; 
    }
    .text-banner-content p {
    font-size: {{ section.settings.text_font_size_m }}px;  
    
  }
  }
</style>
<div class="text-banner-area m-color-{{ section.settings.color_scheme }}">
  <div class="text-banner-content">
    {% for block in section.blocks %}
      {%- case block.type -%}
        {%- when 'title' -%}
          <h3 class="text-banner-title {{ section.settings.heading_type }}">{{ block.settings.title }}</h3>
        {%- when 'title_style' -%}
          <h3 class="text-banner-subtitle style"><i>{{ block.settings.style_title }}</i></h3>
        {%- when 'text' -%}
          <p>
            {{ block.settings.text }}
          </p>
      {%- endcase -%}
    {% endfor %}
  </div>
</div>
