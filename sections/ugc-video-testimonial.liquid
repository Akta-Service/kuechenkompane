<script src="{{ 'swiper-bundle.min.js' | asset_url }}"></script>
<script>
  // Open popup
  const openButtons = document.querySelectorAll('.open-popup');
  const closeButtons = document.querySelectorAll('.close-popup');
  const popups = document.querySelectorAll('.popup');
  const swiperVideos = document.querySelectorAll('.swiper-slide video');

  // When an open button is clicked
  openButtons.forEach((button) => {
    button.addEventListener('click', () => {
      const targetId = button.getAttribute('data-target');

      // Close all popups first
      popups.forEach((popup) => {
        popup.classList.add('hidden');
        const video = popup.querySelector('video');
        if (video) {
          video.pause(); // Pause the video when closing the popup
        }
      });

      // Open the clicked popup
      const targetPopup = document.getElementById(targetId);
      targetPopup.classList.remove('hidden');

      // Play video in the opened popup
      const video = targetPopup.querySelector('video');
      if (video) {
        video.play();
      }
    });
  });

  // When a close button is clicked
  closeButtons.forEach((button) => {
    button.addEventListener('click', () => {
      const popup = button.closest('.popup');
      popup.classList.add('hidden');
      const video = popup.querySelector('video');
      if (video) {
        video.pause(); // Pause the video when closing the popup
      }
    });
  });

  // Click outside the popup to close it
  window.addEventListener('click', (event) => {
    if (event.target.classList.contains('popup')) {
      event.target.classList.add('hidden');
      const video = event.target.querySelector('video');
      if (video) {
        video.pause(); // Pause the video when clicking outside
      }
    }
  });

  // Toggle play/pause when clicking the video inside the popup
  const videoItems = document.querySelectorAll('.popup_item video');
  videoItems.forEach((video) => {
    video.addEventListener('click', (event) => {
      if (video.paused) {
        video.play(); // Play the video if it's paused
      } else {
        video.pause(); // Pause the video if it's playing
      }
      event.stopPropagation(); // Prevent the click event from bubbling up to the popup
    });
  });

  // Autoplay all videos inside swiper-slide on page load
  document.addEventListener('DOMContentLoaded', () => {
    swiperVideos.forEach((video) => {
      video.play(); // Automatically play each video in swiper-slide
    });
  });

  // Initialize Swiper
  var video_slider = new Swiper('.video_slider_active', {
    slidesPerView: 6,
    spaceBetween: 8,
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    breakpoints: {
      0: {
        slidesPerView: 2,
        spaceBetween: 8,
        centeredSlides: true,
        loop: true,
      },
      700: {
        slidesPerView: 3,
        spaceBetween: 8,
      },
      1024: {
        slidesPerView: 6,
        spaceBetween: 8,
      },
    },
    on: {
      slideChange: function () {
        // Pause video on slide change
        swiperVideos.forEach((video) => {
          video.pause();
        });

        // Autoplay the video in the new slide
        const activeSlide = document.querySelector('.swiper-slide-active video');
        if (activeSlide) {
          activeSlide.play(); // Autoplay the video in the active slide
        }
      },
    },
  });

  // Autoplay video when hovering over the .video_item
  const videoItemsForHover = document.querySelectorAll('.video_item');
  videoItemsForHover.forEach((item) => {
    const video = item.querySelector('video');

    // Play video on hover
    item.addEventListener('mouseenter', () => {
      if (video) {
        video.play();
      }
    });

    // Pause video when hover ends
    item.addEventListener('mouseleave', () => {
      if (video) {
        video.pause();
      }
    });
  });
</script>
