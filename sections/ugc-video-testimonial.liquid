<style>
  .video_area {
      padding: 70px 0;
      padding-top: {{- section.settings.pt -}}px;
      padding-bottom: {{- section.settings.pb -}}px;
  }

  .custom_container {
      max-width: 1400px;
      width: 100%;
      margin: 0 auto;
      padding: 0px 40px;
  }

  .video_title {
      padding-bottom: 32px;
      display: flex;
      align-items: center;
      justify-content: space-between;
  }

  .video_title h3 {
      font-size: {{- section.settings.title_size -}}px;
      font-weight: 400;
      text-transform: uppercase;
      color: {{- section.settings.title_color -}};
      margin: 0;
  }

  .video_title a {
      font-size: 14px;
      font-weight: 400;
      text-transform: uppercase;
      color: #1E1E1E;
      display: inline-block;
      text-decoration: none;
      padding-bottom: 5px;
      border-bottom: 1px solid #1E1E1E;
      transition: 0.2s all ease;
  }

  .video_title a:hover {
      color: #635247;
  }

  /* swiper slider */
  .swiper {
      width: 100%;
      height: 100%;
  }

  .swiper-slide {
      background: transparent;
      border-radius: 24px;
  }

  .swiper-slide video {
      width: 100%;
      max-width: 100%;
      height: 100%;
      -o-object-fit: cover;
      object-fit: cover;
      border-radius: 24px;
  }

  .video_item {
      position: relative;
      cursor: pointer;
  }

  .play_btn {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
  }

  .play_btn img {
      width: 24px;
      opacity: 0.7;
      transition: 0.3s all ease;
  }

  .video_item:hover img {
      transform: scale(1.15);
  }

  .swiper-button-prev,
  .swiper-button-next {
      display: none;
  }

  .swiper-button-prev,
  .swiper-button-next {
      color: #898989;
      background-color: #FFFFFF;
      border-radius: 50%;
      height: 36px;
      width: 36px;
  }

  .swiper-button-prev::after {
      content: url("data:image/svg+xml,%3Csvg width='8' height='8' viewBox='0 0 8 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M4.06673 -9.0518e-07L6.10829e-05 4C1.0202 5.00069 3.04664 6.99929 4.06673 8L4.57992 7.50347C3.66255 6.60347 2.44872 5.4048 1.37779 4.35342L8.00001 4.35342L8.00001 3.64716L1.37779 3.64716L4.57992 0.502097L4.06673 -9.0518e-07Z' fill='%231E1E1E'/%3E%3C/svg%3E%0A");
      transform: translate(0%, -50%);
      top: 15%;
      position: absolute;
  }

  .swiper-button-next::after {
      content: url("data:image/svg+xml,%3Csvg width='8' height='8' viewBox='0 0 8 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M3.93333 8L8 4C6.97986 2.99931 4.95342 1.00071 3.93333 -1.7776e-07L3.42014 0.496533C4.33751 1.39653 5.55134 2.5952 6.62228 3.64658L5.22927e-05 3.64658L5.22618e-05 4.35283L6.62228 4.35283L3.42014 7.4979L3.93333 8Z' fill='%231E1E1E'/%3E%3C/svg%3E%0A");
      top: 15%;
      position: absolute;
      transform: translate(0%, -50%);
  }


  /* popup  */
  .popup {
      width: auto;
      height: auto;
      position: fixed;
      left: 20px;
      bottom: 20px;
      z-index: 99;
      overflow: hidden;
      border-radius: 24px;
  }

  .popup.hidden {
      display: none;
  }

  .popup-content {
      position: relative;
  }

  .close-popup {
      position: absolute;
      top: 10px;
      right: 10px;
      cursor: pointer;
      font-size: 20px;
  }

  .close-popup {
      width: 40px;
      height: 40px;
      background-color: rgba(0,0,0,.2);
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      border-radius: 50%;
      z-index: 4;
      position: absolute;
      top: 20px;
      left: 20px;
  }

  .popup_item {
      max-width: 370px;
      width: 100%;
      position: relative;
  }

  .popup_item video {
      max-width: 370px;
      max-height: 600px;
      z-index: 3;
      position: relative
      border-radius: 24px;
  }

  .popup_bottom a {
      width: 100%;
      display: block;
      padding: 20px 20px;
      text-decoration: none;
      position: absolute;
      bottom: 0;
      left: 0;
  }

  .popup_product {
      display: flex;
      align-items: center;
      background: hsla(0,0%,100%,.3);
      -webkit-backdrop-filter: blur(6px);
      backdrop-filter: blur(6px);
      border-radius: 5px;
  }

  .popup_product_left {
      width: 34%;
  }

  .popup_product_left img {
      width: 100%;
      border-radius: 5px 0px 0px 5px;
  }

  .popup_product_right {
      width: 66%;
      padding: 8px 8px;
  }

  .popup_product_right p {
      font-size: 14px;
      font-weight: 400;
      color: #FFFFFF;
      margin: 0;
      border: none;
  }

  .popup_product_right ul {
      list-style: none;
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 10px 0;
  }

  .popup_product_right ul li {
      font-size: 14px;
      font-weight: 400;
      color: #FFFFFF;
      border: none;
  }

  .popup_product_right ul li span {
      color: #BC1E1E;
      text-decoration: line-through;
  }

  .popup_product_right button {
      font-size: 14px;
      font-weight: 700;
      color: #FFFFFF;
      background: #000;
      border: none;
      outline: none;
      display: inline-block;
      padding: 5px 15px;
      border-radius: 5px;
      cursor: pointer;
  }

  @media screen and (max-width: 699px) {
    .video_area {
      padding-top: {{- section.settings.pt_mobile -}}px;
      padding-bottom: {{- section.settings.pb_mobile -}}px;
    }
  }
  @media screen and (max-width: 699px) {
      .swiper-button-prev,
      .swiper-button-next {
          display: flex;
      }

      .video_title {
          display: block;
          text-align: center;
          padding: 0px 20px 30px;
      }

      .video_title h3 {
          font-size: 16px;
          margin-bottom: 12px;
      }

      .popup_item {
          max-width: 320px;
          width: 100%;
      }

      .popup_item video, {
          max-width: 320px;
          max-height: 500px;
      }

      .custom_container {
          padding: 0;
      }

  }
</style>

