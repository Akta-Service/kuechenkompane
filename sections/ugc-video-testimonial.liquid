                <img src="{{ product.featured_image |  img_url: large }}" alt="{{ product.title }}">
              </div>
              <div class="popup_product_right">
                <p>{{ product.title }}</p>
                <ul>
                  {% if product.compare_at_price > product.price %}
                    <li>
                      <span>{{ product.compare_at_price | money }}</span>
                    </li>
                  {% endif %}
                  <li>{{ product.price | money }}</li>
                </ul>
                <button type="button">{{ block.settings.btn_text | default: 'Shop' }}</button>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
